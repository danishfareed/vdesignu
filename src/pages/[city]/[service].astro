---
import Layout from "../../layouts/Layout.astro";
import { services, cities } from "../../config/site-config";
import servicesContent from "../../data/services-content.json";

export function getStaticPaths() {
  const paths = [];
  
  for (const city of cities) {
    for (const service of services) {
      paths.push({
        params: { 
          city: city.slug, 
          service: service.slug 
        },
        props: { city, service },
      });
    }
  }
  
  return paths;
}

const { city, service } = Astro.props;
const content = servicesContent[service.slug as keyof typeof servicesContent];
const canonicalURL = new URL(Astro.url.pathname, "https://vdesignu.com");

// Localize content helper
const localize = (text: string) => {
  if (!text) return "";
  return text
    .replace(/Gulf region/g, city.name)
    .replace(/UAE/g, city.country)
    .replace(/Dubai/g, city.name)
    .replace(/Saudi Arabia/g, city.country);
};
---

<Layout 
  title={`${service.name} Agency in ${city.name} | Trusted ${city.country} Growth Partner`} 
  description={`Looking for ${service.name.toLowerCase()} in ${city.name}? We help B2B and B2C brands grow with high-performance digital systems. Available now in ${city.name}, ${city.country}.`}
  canonical={canonicalURL.toString()}
>
  <!-- Localized Hero -->
  <section class="pt-40 pb-24 bg-[var(--bg-primary)] overflow-hidden relative">
    <div class="absolute inset-0 bg-[var(--accent-red)]/5 opacity-20"></div>
    <div class="absolute bottom-0 right-0 w-[500px] h-[500px] bg-[var(--accent-yellow)]/5 rounded-full blur-[120px]"></div>
    
    <div class="max-w-7xl mx-auto px-6 relative z-10 text-center lg:text-left">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-400 text-xs font-black uppercase tracking-widest mb-8 border border-red-100 dark:border-red-900/30">
        Localized Expertise: {city.name}
      </div>
      <h1 class="text-5xl md:text-8xl font-black italic uppercase tracking-tighter leading-[0.9] text-[var(--text-primary)] mb-8">
        The Premier<br/>
        <span class="text-[var(--accent-red)]">{service.name}</span><br/>
        Agency in <span class="relative">{city.name}</span>
      </h1>
      <p class="text-2xl font-medium text-[var(--text-secondary)] max-w-3xl mb-12 leading-relaxed">
        {localize(content?.heroDescription?.split('.')[0]) || `Premium ${service.name.toLowerCase()} solutions for B2B and B2C brands in ${city.name}. We help you find more customers and grow your revenue.`}
      </p>
      
      <div class="flex flex-col sm:flex-row gap-6 justify-center lg:justify-start">
        <a href="/contact" class="px-10 py-5 bg-[var(--accent-red)] text-white font-black italic rounded-xl hover:bg-black transition-all shadow-xl uppercase tracking-tighter text-2xl active:scale-95">
          Get Started
        </a>
      </div>
    </div>
  </section>

  <!-- Service Details -->
  {content && (
    <section class="py-24 bg-[var(--bg-secondary)] border-y border-[var(--border-subtle)]">
      <div class="max-w-4xl mx-auto px-6">
        <h2 class="text-3xl md:text-5xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-8">
           Growth Engineering for <span class="text-[var(--accent-red)]">{city.name}</span> Firms.
        </h2>
        <div class="prose prose-xl dark:prose-invert text-[var(--text-secondary)]">
          <p class="mb-8 font-medium">{localize(content.sections.overview.content)}</p>
          
          <div class="grid md:grid-cols-2 gap-8 not-prose mt-12">
             {content.sections.whatWeOffer.items.slice(0, 4).map((item: any) => (
               <div class="p-8 rounded-3xl bg-[var(--bg-primary)] border-2 border-[var(--border-subtle)] group hover:border-[var(--accent-yellow)] transition-all">
                  <h4 class="text-lg font-black uppercase tracking-tight text-[var(--text-primary)] mb-2 group-hover:text-[var(--accent-red)] transition-colors">{item.title}</h4>
                  <p class="text-sm text-[var(--text-muted)] leading-relaxed">{localize(item.description)}</p>
               </div>
             ))}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Final CTA -->
  <section class="py-24 bg-[var(--accent-red)] text-white text-center">
    <div class="max-w-4xl mx-auto px-6">
      <h2 class="text-4xl md:text-8xl font-black italic uppercase tracking-tighter mb-10 leading-[0.95]">
        Ready to Lead the<br/> <span class="text-[var(--accent-yellow)]">{city.name}</span> Market?
      </h2>
      <a href="/contact" class="inline-block px-12 py-6 bg-white text-[var(--accent-red)] font-black italic uppercase tracking-tighter text-2xl rounded-xl hover:bg-black hover:text-white transition-all shadow-2xl active:scale-95">
        Get Started
      </a>
    </div>
  </section>
</Layout>
