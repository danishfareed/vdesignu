---
import Layout from "../../layouts/Layout.astro";
import { services } from "../../config/site-config";
import industryDeepDive from "../../data/industry-deep-dive.json";
import { getContextualFAQs } from "../../data/faq-database";

export function getStaticPaths() {
    return Object.keys(industryDeepDive)
        .filter((key) => key !== "default")
        .map((industry) => ({
            params: { industry },
        }));
}

const { industry } = Astro.params;
const data = industryDeepDive[industry as keyof typeof industryDeepDive];
const faqs = getContextualFAQs("", industry, "", 15); // Global Industry scope

const title = `Digital Growth Strategies for ${data.name} | vdesignu`;
const description = `Expert digital transformation, SEO, and lead generation systems specifically engineered for the ${data.name} sector. Scale your ${data.name} ROI.`;
---

<Layout title={title} description={description}>
    <!-- Hero Section -->
    <section class="relative py-32 bg-[var(--bg-primary)] overflow-hidden">
        <div
            class="absolute inset-0 z-0 opacity-10 bg-[url('/grid-pattern.svg')]"
        >
        </div>
        <div class="max-w-7xl mx-auto px-6 relative z-10">
            <span
                class="text-[var(--accent-red)] font-black tracking-widest uppercase text-sm mb-4 block"
            >
                Global Industry Pillar
            </span>
            <h1
                class="text-6xl md:text-8xl font-black italic uppercase tracking-tighter mb-8 leading-[0.85]"
            >
                {data.name}
                <br />
                <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-[var(--text-primary)] to-[var(--text-muted)]"
                    >Digital Dominance</span
                >
            </h1>
            <p
                class="text-xl md:text-2xl text-[var(--text-secondary)] max-w-3xl mb-12 leading-relaxed"
            >
                We architect high-performance digital ecosystems for {data.name} leaders.
                From {data.subSectors[0]} to {data.subSectors[1]}, we understand
                the technical complexity of your market.
            </p>
        </div>
    </section>

    <!-- Deep Dive: Operations & Tech Stack -->
    <section
        class="py-24 bg-[var(--bg-secondary)] border-y border-[var(--border-subtle)]"
    >
        <div class="max-w-7xl mx-auto px-6">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
                <!-- Operations Challenges -->
                <div>
                    <h2
                        class="text-4xl font-black uppercase italic tracking-tighter mb-10"
                    >
                        Operational <span class="text-[var(--accent-red)]"
                            >Bottlenecks</span
                        >
                    </h2>
                    <div class="space-y-8">
                        {
                            data.operations.map((op) => (
                                <div class="p-8 bg-[var(--bg-card)] border border-[var(--border-subtle)] rounded-xl hover:border-[var(--accent-red)] transition-all group">
                                    <div class="flex items-center gap-4 mb-4">
                                        <div class="w-10 h-10 flex items-center justify-center bg-[var(--accent-red)] text-white font-bold rounded-lg text-sm">
                                            {op.phase
                                                .substring(0, 2)
                                                .toUpperCase()}
                                        </div>
                                        <h3 class="text-xl font-bold uppercase tracking-tight">
                                            {op.phase}
                                        </h3>
                                    </div>
                                    <p class="text-[var(--text-secondary)] mb-4">
                                        <span class="text-[var(--accent-red)] font-bold">
                                            Challenge:
                                        </span>{" "}
                                        {op.challenge}
                                    </p>
                                    <div class="p-4 bg-[var(--bg-primary)] rounded-lg text-sm font-medium border-l-2 border-[var(--accent-red)]">
                                        Solution: {op.solution}
                                    </div>
                                </div>
                            ))
                        }
                    </div>
                </div>

                <!-- Tech Stack & Compliance -->
                <div>
                    <div class="sticky top-12">
                        <h2
                            class="text-4xl font-black uppercase italic tracking-tighter mb-10"
                        >
                            The {data.name}
                            <span class="text-[var(--text-muted)]"
                                >Tech Stack</span
                            >
                        </h2>

                        <div class="mb-12">
                            <p
                                class="text-lg text-[var(--text-secondary)] mb-6"
                            >
                                Modern {data.name} companies require integration with
                                specific platforms. We build custom APIs for:
                            </p>
                            <div class="flex flex-wrap gap-3">
                                {
                                    data.techStack.map((tech) => (
                                        <span class="px-4 py-2 bg-[var(--bg-card)] border border-[var(--border-subtle)] rounded-full text-xs font-bold uppercase tracking-wider text-[var(--text-primary)]">
                                            {tech}
                                        </span>
                                    ))
                                }
                            </div>
                        </div>

                        <div
                            class="p-8 bg-gradient-to-br from-[var(--bg-card)] to-[var(--bg-secondary)] border border-[var(--border-subtle)] rounded-2xl"
                        >
                            <h3
                                class="text-2xl font-black uppercase italic tracking-tight mb-4 text-[var(--accent-red)]"
                            >
                                Compliance & Security
                            </h3>
                            <p class="text-[var(--text-secondary)] mb-6">
                                We verify your digital footprint against
                                sector-specific regulations.
                            </p>
                            <ul class="space-y-3">
                                <li class="flex items-start gap-3">
                                    <span
                                        class="mt-1 w-2 h-2 rounded-full bg-green-500"
                                    ></span>
                                    <span class="text-sm font-medium"
                                        ><strong
                                            class="text-[var(--text-primary)]"
                                            >Global:</strong
                                        >
                                        {data.compliance.generic}</span
                                    >
                                </li>
                                <li class="flex items-start gap-3">
                                    <span
                                        class="mt-1 w-2 h-2 rounded-full bg-blue-500"
                                    ></span>
                                    <span class="text-sm font-medium"
                                        ><strong
                                            class="text-[var(--text-primary)]"
                                            >Specific:</strong
                                        >
                                        {data.compliance.specific}</span
                                    >
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Service Solution Mesh -->
    <section class="py-24 bg-[var(--bg-primary)]">
        <div class="max-w-7xl mx-auto px-6">
            <h2
                class="text-4xl font-black uppercase italic tracking-tighter mb-16 text-center"
            >
                {data.name}
                <span class="text-[var(--accent-red)]"
                    >Solution Growth Stack</span
                >
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {
                    services.map((service) => (
                        <a
                            href={`/dubai/${industry}/${service.slug}`}
                            class="block p-8 bg-[var(--bg-card)] border border-[var(--border-subtle)] hover:border-[var(--accent-red)] transition-all group rounded-2xl h-full"
                        >
                            <h3 class="text-2xl font-black uppercase italic tracking-tighter mb-4 group-hover:text-[var(--accent-red)] transition-colors">
                                {service.name}
                            </h3>
                            <p class="text-sm text-[var(--text-secondary)] mb-6 leading-relaxed">
                                Specialized {service.name} strategies tailored
                                for {data.name} workflows and audience personas
                                like the {data.personas[0]}.
                            </p>
                            <span class="inline-flex items-center gap-2 text-xs font-black uppercase tracking-widest text-[var(--accent-red)]">
                                Explore Strategy{" "}
                                <span class="group-hover:translate-x-1 transition-transform">
                                    →
                                </span>
                            </span>
                        </a>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
    <section
        class="py-24 bg-[var(--bg-secondary)] border-t border-[var(--border-subtle)]"
    >
        <div class="max-w-4xl mx-auto px-6">
            <h2
                class="text-4xl font-black uppercase italic tracking-tighter mb-12 text-center"
            >
                Strategic Insights
            </h2>
            <div class="space-y-4">
                {
                    faqs.map((faq) => (
                        <details class="group bg-[var(--bg-primary)] border border-[var(--border-subtle)] rounded-xl overflow-hidden">
                            <summary class="flex items-center justify-between p-6 cursor-pointer list-none">
                                <h3 class="text-lg font-bold pr-8">
                                    {faq.question}
                                </h3>
                                <span class="text-[var(--accent-red)] transform group-open:rotate-180 transition-transform">
                                    ▼
                                </span>
                            </summary>
                            <div class="px-6 pb-6 text-[var(--text-secondary)] leading-relaxed">
                                {faq.answer}
                            </div>
                        </details>
                    ))
                }
            </div>
        </div>
    </section>
</Layout>
