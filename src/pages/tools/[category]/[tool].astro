export async function getStaticPaths() {
  const paths: any[] = [];
  
  // 1. Add Legacy Paths
  toolCategories.forEach(category => {
    const categoryTools = tools.filter(t => t.categoryId === category.id);
    categoryTools.forEach(tool => {
      paths.push({
        params: { 
          category: category.slug,
          tool: tool.slug 
        },
        props: { 
          tool,
          category,
          entry: null // Default legacy
        }
      });
    });
  });

  // 2. Merge Content Collection Paths
  const collectionTools = await getCollection('tools');
  collectionTools.forEach(entry => {
    // Expect slug format: "category/tool-slug"
    // e.g. "local-seo/review-link-generator"
    const parts = entry.slug.split('/');
    if (parts.length === 2) {
      const [catSlug, toolSlug] = parts;
      
      // Check if we need to override an existing legacy path
      const existingPath = paths.find(p => p.params.category === catSlug && p.params.tool === toolSlug);
      
      if (existingPath) {
        // Attach the collection entry to the existing props
        existingPath.props.entry = entry;
      } else {
        // Construct basic tool/category props for new tools to satisfy Typescript/Layout
        // In a full migration, we'd refactor Layout to accept 'entry' directly.
        const mockCategory = toolCategories.find(c => c.slug === catSlug) || { 
          id: catSlug, 
          name: 'Tools', 
          slug: catSlug, 
          description: '', 
          icon: 'Box', 
          tier: 1 
        };
        
        const mockTool = {
          id: entry.id || toolSlug,
          name: entry.data.name,
          slug: toolSlug,
          description: entry.data.description,
          shortDescription: entry.data.shortDescription || entry.data.description,
          categoryId: mockCategory.id || catSlug,
          tier: entry.data.tier,
          icon: entry.data.icon,
          keywords: entry.data.keywords,
          featured: entry.data.featured,
          instructions: entry.data.instructions
        };

        paths.push({
          params: { category: catSlug, tool: toolSlug },
          props: { tool: mockTool, category: mockCategory, entry }
        });
      }
    }
  });

  return paths;
}

