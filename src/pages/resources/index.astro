---
import Layout from '../../layouts/Layout.astro';
import { Terminal, Palette, Rocket, ShoppingCart, ArrowRight, Lock } from 'lucide-react';

const categories = [
  {
    title: "Developer Resources",
    description: "Curated collection of 2200+ free tools, APIs, and services for developers.",
    icon: Terminal,
    href: "/resources/free-developer-resources",
    active: true,
    count: "2200+ Tools"
  },
  {
    title: "Designer Resources",
    description: "Free UI kits, fonts, illustrations, and design systems for your next project.",
    icon: Palette,
    href: "#",
    active: false,
    count: "Coming Soon"
  },
  {
    title: "Startup Tools",
    description: "Essential resources for founders: pitch decks, legal templates, and growth hacks.",
    icon: Rocket,
    href: "#",
    active: false,
    count: "Coming Soon"
  },
  {
    title: "Ecommerce & Marketing",
    description: "Tools to scale your store: analytics, SEO, and conversion optimization.",
    icon: ShoppingCart,
    href: "#",
    active: false,
    count: "Coming Soon"
  }
];
---

<Layout 
  title="Free Resources Hub" 
  description="Empowering the community with free, high-quality resources for developers, designers, and founders."
>
  <!-- Hero Section -->
  <section class="pt-40 pb-24 bg-[var(--bg-primary)] overflow-hidden relative">
    <div class="absolute top-0 right-0 w-[800px] h-[800px] bg-red-600/5 rounded-full blur-[150px]"></div>
    <div class="absolute bottom-0 left-0 w-[600px] h-[600px] bg-yellow-500/5 rounded-full blur-[150px]"></div>

    <div class="max-w-7xl mx-auto px-6 text-center relative z-10">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-400 text-xs font-black uppercase tracking-[0.3em] mb-10 border border-red-100 dark:border-red-900/30">
        <span class="w-2 h-2 rounded-full bg-[var(--accent-red)] animate-pulse"></span>
        Community First
      </div>
      
      <h1 class="text-5xl md:text-8xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-10 leading-[0.85]">
        Free <span class="text-[var(--accent-red)]">Resources</span>
      </h1>
      
      <p class="text-xl md:text-2xl text-[var(--text-secondary)] leading-relaxed max-w-3xl mx-auto mb-12">
        We believe in giving back. Access a curated library of premium tools and assets to fuel your growthâ€”
        <span class="text-[var(--accent-red)] font-bold">completely free.</span>
      </p>
    </div>
  </section>

  <!-- Categories Grid -->
  <section class="py-24 bg-[var(--bg-secondary)]">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-6xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-6">
          Browse by <span class="text-[var(--accent-red)]">Category</span>
        </h2>
        <p class="text-lg text-[var(--text-secondary)] max-w-2xl mx-auto">
          Explore our growing library of free resources organized by category.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-8">
        {categories.map((category) => (
          <div class={`
            group relative p-8 rounded-[2rem] border-2 border-[var(--border-subtle)] bg-[var(--bg-card)] 
            transition-all duration-300 hover:shadow-2xl hover:shadow-black/5
            ${category.active ? 'hover:-translate-y-2 hover:border-[var(--accent-red)] cursor-pointer' : 'opacity-80 hover:opacity-100'}
          `}>
            <a href={category.href} class={`absolute inset-0 z-10 ${!category.active && 'cursor-default pointer-events-none'}`}></a>
            
            <div class="flex items-start justify-between mb-8">
              <div class="w-16 h-16 rounded-2xl flex items-center justify-center text-white shadow-lg bg-[var(--accent-red)]">
                <category.icon size={32} strokeWidth={1.5} />
              </div>
              
              <div class={`
                px-4 py-2 rounded-full text-xs font-black uppercase tracking-wider
                ${category.active 
                  ? 'bg-[var(--bg-primary)] text-[var(--text-primary)] border border-[var(--border-subtle)]' 
                  : 'bg-[var(--bg-primary)] text-[var(--text-muted)] border border-[var(--border-subtle)] flex items-center gap-2'}
              `}>
                {category.count}
                {!category.active && <Lock size={12} />}
              </div>
            </div>

            <h3 class="text-2xl md:text-3xl font-black italic uppercase tracking-tight text-[var(--text-primary)] mb-4 group-hover:text-[var(--accent-red)] transition-colors">
              {category.title}
            </h3>
            
            <p class="text-[var(--text-secondary)] text-lg mb-8 leading-relaxed">
              {category.description}
            </p>

            <div class="flex items-center text-[var(--accent-red)] font-black italic uppercase tracking-tight text-sm group/btn">
              {category.active ? (
                <>
                  <span class="mr-2">Explore Library</span>
                  <ArrowRight size={18} className="transition-transform group-hover/btn:translate-x-2" />
                </>
              ) : (
                <span class="text-[var(--text-muted)]">Coming Soon</span>
              )}
            </div>

            {/* Hover Glow Effect */}
            <div class="absolute inset-0 bg-gradient-to-br from-[var(--accent-red)]/0 to-[var(--accent-red)]/5 opacity-0 group-hover:opacity-100 transition-opacity rounded-[2rem] pointer-events-none"></div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 bg-[var(--accent-red)] text-white text-center">
    <div class="max-w-4xl mx-auto px-6">
      <h2 class="text-3xl md:text-6xl font-black italic uppercase tracking-tighter text-white mb-8 leading-tight">
        More Resources Coming
      </h2>
      <p class="text-xl text-white/80 mb-10">
        We're constantly adding new categories and resources. Check back often or follow us for updates.
      </p>
      <a href="/contact" class="inline-block px-12 py-6 bg-white text-[var(--accent-red)] font-black italic uppercase tracking-tighter text-xl rounded-xl hover:bg-black hover:text-white transition-all shadow-2xl active:scale-95">
        Request a Resource
      </a>
    </div>
  </section>
</Layout>
