---
import Layout from "../layouts/Layout.astro";
import content from "../data/site-content.json";
const { work } = content;
const { results } = content.homepage;
---

<Layout title={work.metaTitle} description={work.metaDescription}>
  <section class="pt-40 pb-24 bg-[var(--bg-primary)]">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-16">
        <h1 class="text-5xl md:text-8xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-6 leading-none">
          {work.title}
        </h1>
        <p class="text-2xl text-[var(--text-secondary)] max-w-2xl mx-auto">
          {work.subtitle}
        </p>
      </div>

      <!-- Case Studies Grid -->
      <div class="grid md:grid-cols-2 gap-8">
        {results.cases.map((cs: any) => (
          <div class="group relative overflow-hidden rounded-[2.5rem] bg-[var(--bg-card)] border-2 border-[var(--border-subtle)] hover:border-red-600 transition-all duration-500">
            <div class="p-10 md:p-12">
              <div class="flex items-center justify-between mb-8">
                <span class="px-4 py-2 rounded-full bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-400 text-sm font-bold uppercase tracking-widest">
                  {cs.industry}
                </span>
                <span class="text-sm font-bold uppercase tracking-widest text-[var(--text-muted)]">
                  {cs.location}
                </span>
              </div>
              
              <h2 class="text-3xl md:text-4xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-6 group-hover:text-red-600 transition-colors leading-[0.95]">
                {cs.industry} Digital<br/>Optimization Strategy.
              </h2>
              
              <div class="grid grid-cols-2 gap-8 mb-8 border-t border-b border-[var(--border-subtle)] py-8">
                <div>
                  <div class="text-5xl font-black italic tracking-tighter text-red-600 mb-1">{cs.metric}</div>
                  <div class="text-xs font-bold uppercase tracking-widest text-[var(--text-muted)]">{cs.label}</div>
                </div>
                <div>
                  <div class="text-5xl font-black italic tracking-tighter text-[var(--text-primary)] mb-1">ROI</div>
                  <div class="text-xs font-bold uppercase tracking-widest text-[var(--text-muted)]">Proven Growth</div>
                </div>
              </div>

              <p class="text-[var(--text-secondary)] text-lg leading-relaxed mb-10">
                {cs.description}
              </p>

              <a href="/contact" class="inline-flex items-center gap-2 text-red-600 font-bold uppercase tracking-wider group-hover:gap-4 transition-all">
                Read Full Case Study
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </a>
            </div>
          </div>
        ))}

        <!-- Coming Soon Card -->
        <div class="rounded-[2.5rem] bg-[var(--bg-tertiary)] flex items-center justify-center p-12 text-center border-2 border-dashed border-[var(--border-subtle)]">
          <div>
            <svg class="w-16 h-16 text-[var(--text-muted)] mx-auto mb-6 opacity-30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <h3 class="text-2xl font-black italic uppercase tracking-tighter text-[var(--text-muted)] opacity-50">More Coming Soon</h3>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-[var(--text-primary)] text-[var(--bg-primary)]">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="text-4xl md:text-6xl font-black italic uppercase tracking-tighter mb-8 leading-tight">
        {work.cta_title}
      </h2>
      <a href="/contact" class="inline-block px-12 py-6 bg-red-600 text-white font-black italic uppercase tracking-tighter text-2xl rounded-full hover:bg-white hover:text-red-600 transition-all shadow-2xl">
        {work.cta_button}
      </a>
    </div>
  </section>
</Layout>
