---
import Layout from "../layouts/Layout.astro";
import content from "../data/site-content.json";
const { work } = content;
const { results } = content.homepage;
---

<Layout title={work.metaTitle} description={work.metaDescription}>
  <section class="pt-40 pb-24 bg-[var(--bg-primary)] overflow-hidden relative">
    <div class="absolute top-0 left-0 w-[800px] h-[800px] bg-[var(--accent-red)]/5 rounded-full blur-[150px]"></div>
    <div class="max-w-7xl mx-auto px-6 relative z-10">
      <div class="text-center mb-24">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-400 text-xs font-black uppercase tracking-[0.3em] mb-10 border border-red-100 dark:border-red-900/30">
          The Engineering Evidence
        </div>
        <h1 class="text-6xl md:text-9xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-10 leading-[0.8] translate-y-[-5%]">
          Our <span class="text-[var(--accent-red)]">Evidence</span> Hub
        </h1>
        <p class="text-2xl md:text-3xl text-[var(--text-secondary)] max-w-3xl mx-auto font-medium leading-relaxed">
          {work.subtitle}
        </p>
      </div>

      <!-- Case Studies Grid -->
      <div class="grid lg:grid-cols-2 gap-12">
        {results.cases.map((cs: any, i: number) => (
          <div class="group relative overflow-hidden rounded-[4rem] bg-[var(--bg-card)] border-2 border-[var(--border-subtle)] hover:border-[var(--accent-red)] transition-all duration-700 shadow-xl hover:shadow-red-600/10">
            <div class="absolute -top-24 -right-24 w-64 h-64 bg-[var(--accent-red)]/10 rounded-full blur-3xl group-hover:bg-[var(--accent-red)]/20 transition-colors"></div>
            
            <div class="p-12 md:p-16">
              <div class="flex items-center justify-between mb-12 border-b border-[var(--border-subtle)]/50 pb-8">
                <span class="px-5 py-2 rounded-full bg-red-50 dark:bg-red-900/10 text-red-600 dark:text-red-400 text-[10px] font-black uppercase tracking-[0.2em] border border-red-100 dark:border-red-900/30">
                  {cs.industry}
                </span>
                <span class="text-[10px] font-black uppercase tracking-widest text-[var(--text-muted)] flex items-center gap-1">
                   <svg class="w-3 h-3 text-[var(--accent-yellow)]" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                   </svg>
                   {cs.location}
                </span>
              </div>
              
              <h2 class="text-4xl md:text-6xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-8 group-hover:text-[var(--accent-red)] transition-colors leading-[0.85]">
                {cs.industry} Strategy <br/>
                <span class="text-[var(--accent-red)]">Optimization</span>
              </h2>
              
              <div class="grid grid-cols-2 gap-8 mb-12 border-t border-b border-[var(--border-subtle)] py-10">
                <div>
                  <div class="text-6xl font-black italic tracking-tighter text-[var(--accent-red)] mb-1 group-hover:scale-110 transition-transform origin-left">{cs.metric}</div>
                  <div class="text-[10px] font-black uppercase tracking-[0.3em] text-[var(--text-muted)]">{cs.label}</div>
                </div>
                <div>
                  <div class="text-6xl font-black italic tracking-tighter text-[var(--text-primary)] mb-1">ROI</div>
                  <div class="text-[10px] font-black uppercase tracking-[0.3em] text-[var(--text-muted)]">Scale Secured</div>
                </div>
              </div>

              <p class="text-[var(--text-secondary)] text-xl leading-relaxed mb-12 font-medium">
                {cs.description}
              </p>

              <div class="flex items-center justify-between">
                 <a href="/contact" class="px-8 py-4 bg-[var(--text-primary)] text-[var(--bg-primary)] font-black italic rounded-xl hover:bg-[var(--accent-red)] hover:text-white transition-all uppercase tracking-tighter text-xl active:scale-95 shadow-lg group-hover:px-12 group-hover:bg-[var(--accent-red)] group-hover:text-white">
                    Get Details &rarr;
                 </a>
                 <div class="text-[10px] font-black uppercase tracking-widest text-[var(--accent-yellow)] flex items-center gap-2">
                    <span class="w-2 h-2 rounded-full bg-[var(--accent-yellow)] animate-pulse"></span>
                    Verified {cs.timeline}
                 </div>
              </div>
            </div>
          </div>
        ))}

        <!-- High-Impact Placeholder -->
        <div class="rounded-[4rem] bg-[var(--bg-secondary)] flex flex-col items-center justify-center p-20 text-center border-4 border-dashed border-[var(--border-subtle)] group">
            <div class="w-32 h-32 rounded-full border-4 border-dashed border-[var(--border-subtle)] flex items-center justify-center mb-10 group-hover:rotate-[180deg] transition-all duration-1000">
               <svg class="w-12 h-12 text-[var(--text-muted)] opacity-30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M12 4v16m8-8H4"/>
               </svg>
            </div>
            <h3 class="text-3xl font-black italic uppercase tracking-tighter text-[var(--text-muted)] opacity-50 mb-4">Results Queued</h3>
            <p class="text-[var(--text-muted)] font-bold uppercase tracking-widest text-xs opacity-50">Confidential B2B & B2C Projects in Roadmap</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-32 bg-[#0a0a0a] text-white rounded-t-[5rem] relative overflow-hidden">
    <div class="absolute bottom-0 right-0 w-[500px] h-[500px] bg-red-600/10 rounded-full blur-[100px]"></div>
    <div class="max-w-7xl mx-auto px-6 text-center relative z-10">
      <h2 class="text-5xl md:text-8xl font-black italic uppercase tracking-tighter mb-12 leading-[0.9]">
        Ready to <span class="text-[var(--accent-red)]">Grow</span> your<br/> business<span class="text-[var(--accent-yellow)]">?</span>
      </h2>
      <a href="/contact" class="inline-block px-12 py-6 bg-[var(--accent-red)] text-white font-black italic uppercase tracking-tighter text-2xl rounded-xl hover:bg-white hover:text-black transition-all shadow-2xl active:scale-95 scale-110">
        Start Your Project Now
      </a>
    </div>
  </section>
</Layout>
