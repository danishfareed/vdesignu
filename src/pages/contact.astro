---
import Layout from "../layouts/Layout.astro";
import content from "../data/site-content.json";
const { contact } = content;
---

<Layout title={contact.metaTitle} description={contact.metaDescription}>
  <section class="pt-40 pb-24 bg-[var(--bg-primary)] overflow-hidden">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-start">
        <!-- Text Content -->
        <div>
          <h1 class="text-5xl md:text-7xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-8 leading-[0.95]">
            Talk to an<br/><span class="text-red-600">Expert</span>, Not a Salesperson.
          </h1>
          <p class="text-xl text-[var(--text-secondary)] mb-12 max-w-xl">
            {contact.subtitle}
          </p>

          <div class="space-y-10">
             <div>
              <h4 class="text-xs font-bold uppercase tracking-widest text-[var(--text-muted)] mb-4">Direct Contact</h4>
              <div class="space-y-4">
                <a href={`mailto:${contact.email}`} class="flex items-center gap-4 group">
                  <div class="w-12 h-12 rounded-xl bg-red-50 dark:bg-red-900/20 flex items-center justify-center text-red-600 group-hover:bg-red-600 group-hover:text-white transition-all">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                  </div>
                  <span class="text-lg font-bold text-[var(--text-primary)]">{contact.email}</span>
                </a>
                <a href={`tel:${contact.phone.replace(/\s/g, '')}`} class="flex items-center gap-4 group">
                  <div class="w-12 h-12 rounded-xl bg-red-50 dark:bg-red-900/20 flex items-center justify-center text-red-600 group-hover:bg-red-600 group-hover:text-white transition-all">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                  </div>
                  <span class="text-lg font-bold text-[var(--text-primary)]">{contact.phone}</span>
                </a>
              </div>
            </div>

            <div>
              <h4 class="text-xs font-bold uppercase tracking-widest text-[var(--text-muted)] mb-4">Our Presence</h4>
              <div class="grid grid-cols-2 gap-4">
                {contact.locations.map((loc: any) => (
                  <div class="p-4 rounded-xl border border-[var(--border-subtle)] bg-[var(--bg-secondary)]">
                    <div class="font-bold text-[var(--text-primary)] text-sm mb-1 uppercase tracking-tight">{loc.city}</div>
                    <div class="text-[var(--text-muted)] text-xs">{loc.address}</div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form Card -->
        <div class="bg-[var(--bg-card)] p-8 md:p-12 rounded-[2.5rem] border-2 border-[var(--border-subtle)] shadow-2xl relative">
          <div class="absolute -top-4 -left-4 bg-red-600 text-white px-6 py-2 rounded-full font-black italic uppercase tracking-tighter text-sm">
            Free Strategy Call
          </div>
          
          <form class="space-y-6">
            <div class="grid md:grid-cols-2 gap-6">
              <div class="space-y-2">
                <label class="text-xs font-bold uppercase tracking-widest text-[var(--text-muted)] px-1">Full Name</label>
                <input type="text" placeholder="John Doe" class="w-full px-6 py-4 rounded-2xl bg-[var(--bg-primary)] border-2 border-[var(--border-subtle)] focus:border-red-600 outline-none transition-all text-[var(--text-primary)]" required />
              </div>
              <div class="space-y-2">
                <label class="text-xs font-bold uppercase tracking-widest text-[var(--text-muted)] px-1">Email Address</label>
                <input type="email" placeholder="john@company.com" class="w-full px-6 py-4 rounded-2xl bg-[var(--bg-primary)] border-2 border-[var(--border-subtle)] focus:border-red-600 outline-none transition-all text-[var(--text-primary)]" required />
              </div>
            </div>

            <div class="grid md:grid-cols-2 gap-6">
              <div class="space-y-2">
                <label class="text-xs font-bold uppercase tracking-widest text-[var(--text-muted)] px-1">Company Name</label>
                <input type="text" placeholder="Industrial Corp" class="w-full px-6 py-4 rounded-2xl bg-[var(--bg-primary)] border-2 border-[var(--border-subtle)] focus:border-red-600 outline-none transition-all text-[var(--text-primary)]" required />
              </div>
              <div class="space-y-2">
                <label class="text-xs font-bold uppercase tracking-widest text-[var(--text-muted)] px-1">Industry</label>
                <select class="w-full px-6 py-4 rounded-2xl bg-[var(--bg-primary)] border-2 border-[var(--border-subtle)] focus:border-red-600 outline-none transition-all text-[var(--text-primary)] appearance-none">
                  <option>Oil & Gas</option>
                  <option>Manufacturing</option>
                  <option>Marine</option>
                  <option>Construction</option>
                  <option>Other B2B</option>
                </select>
              </div>
            </div>

            <div class="space-y-2">
              <label class="text-xs font-bold uppercase tracking-widest text-[var(--text-muted)] px-1">How can we help?</label>
              <textarea rows="4" placeholder="Tell us about your project or growth goals..." class="w-full px-6 py-4 rounded-2xl bg-[var(--bg-primary)] border-2 border-[var(--border-subtle)] focus:border-red-600 outline-none transition-all text-[var(--text-primary)] resize-none" required></textarea>
            </div>

            <button type="submit" class="w-full py-5 bg-red-600 text-white font-black italic uppercase tracking-tighter text-2xl rounded-2xl hover:bg-black transition-all shadow-xl shadow-red-600/20 active:scale-[0.98]">
              Send Message
            </button>
            <p class="text-center text-[var(--text-muted)] text-xs mt-4">
              Average response time: 2 hours.
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>
</Layout>
