---
import Layout from "../layouts/Layout.astro";
import content from "../data/site-content.json";
const { contact } = content;
---

<Layout title={contact.metaTitle} description={contact.metaDescription}>
  <section class="pt-40 pb-24 bg-[var(--bg-primary)] overflow-hidden relative">
    <div class="absolute top-0 right-0 w-[800px] h-[800px] bg-red-600/5 rounded-full blur-[150px]"></div>
    <div class="max-w-7xl mx-auto px-6 relative z-10">
      <div class="grid lg:grid-cols-2 gap-20 items-start">
        <!-- Text Content -->
        <div>
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-400 text-xs font-black uppercase tracking-[0.3em] mb-8 border border-red-100 dark:border-red-900/30">
            Strategic Discovery
          </div>
          <h1 class="text-6xl md:text-9xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-10 leading-[0.8] translate-y-[-5%]">
            Talk to an <br/><span class="text-[var(--accent-red)]">Engineer</span><br/> Not Sales
          </h1>
          <p class="text-2xl text-[var(--text-secondary)] mb-16 max-w-xl font-medium leading-relaxed">
            {contact.subtitle}
          </p>

          <div class="grid gap-12">
             <div class="group">
              <h4 class="text-xs font-black uppercase tracking-[0.3em] text-[var(--text-muted)] mb-6">Direct Channels</h4>
              <div class="space-y-6">
                <a href={`mailto:${contact.email}`} class="flex items-center gap-6 group">
                  <div class="w-16 h-16 rounded-2xl bg-[var(--bg-secondary)] border-2 border-[var(--border-subtle)] flex items-center justify-center text-[var(--accent-red)] group-hover:bg-[var(--accent-red)] group-hover:text-white transition-all shadow-lg group-hover:rotate-3">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                  </div>
                  <span class="text-2xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] group-hover:text-[var(--accent-red)] transition-colors">{contact.email}</span>
                </a>
                <a href={`tel:${contact.phone.replace(/\s/g, '')}`} class="flex items-center gap-6 group">
                  <div class="w-16 h-16 rounded-2xl bg-[var(--bg-secondary)] border-2 border-[var(--border-subtle)] flex items-center justify-center text-[var(--accent-red)] group-hover:bg-[var(--accent-red)] group-hover:text-white transition-all shadow-lg group-hover:rotate-[-3deg]">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                  </div>
                  <span class="text-2xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] group-hover:text-[var(--accent-red)] transition-colors">{contact.phone}</span>
                </a>
              </div>
            </div>

            <div>
              <h4 class="text-xs font-black uppercase tracking-[0.3em] text-[var(--text-muted)] mb-6">Regional Presence</h4>
              <div class="grid sm:grid-cols-2 gap-6">
                {contact.locations.map((loc: any) => (
                  <div class="p-8 rounded-[2rem] border-2 border-[var(--border-subtle)] bg-[var(--bg-secondary)] hover:border-[var(--accent-yellow)] transition-all group">
                    <div class="font-black italic text-[var(--text-primary)] text-xl mb-2 uppercase tracking-tighter group-hover:text-[var(--accent-red)] transition-colors">{loc.city}</div>
                    <div class="text-[var(--text-muted)] text-sm font-medium">{loc.address}</div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form Card -->
        <div class="bg-[var(--bg-card)] p-10 md:p-16 rounded-[4rem] border-2 border-[var(--border-subtle)] shadow-2xl relative order-1 lg:order-2">
          <div class="absolute -top-6 -left-6 bg-[var(--accent-red)] text-white px-8 py-3 rounded-xl font-black italic uppercase tracking-tighter text-lg shadow-xl shadow-red-600/20 rotate-[-2deg]">
             Start Your Journey
          </div>
          
          <form class="space-y-8">
            <div class="grid md:grid-cols-2 gap-8">
              <div class="space-y-3">
                <label class="text-xs font-black uppercase tracking-[0.3em] text-[var(--text-muted)] px-1">Identity</label>
                <input type="text" placeholder="Full Name" class="w-full px-8 py-5 rounded-2xl bg-[var(--bg-primary)] border-2 border-[var(--border-subtle)] focus:border-[var(--accent-red)] outline-none transition-all text-[var(--text-primary)] text-lg font-medium" required />
              </div>
              <div class="space-y-3">
                <label class="text-xs font-black uppercase tracking-[0.3em] text-[var(--text-muted)] px-1">Portal</label>
                <input type="email" placeholder="Email Address" class="w-full px-8 py-5 rounded-2xl bg-[var(--bg-primary)] border-2 border-[var(--border-subtle)] focus:border-[var(--accent-red)] outline-none transition-all text-[var(--text-primary)] text-lg font-medium" required />
              </div>
            </div>

            <div class="grid md:grid-cols-2 gap-8">
              <div class="space-y-3">
                <label class="text-xs font-black uppercase tracking-[0.3em] text-[var(--text-muted)] px-1">Industry</label>
                <input type="text" placeholder="e.g. Real Estate, Tech" class="w-full px-8 py-5 rounded-2xl bg-[var(--bg-primary)] border-2 border-[var(--border-subtle)] focus:border-[var(--accent-red)] outline-none transition-all text-[var(--text-primary)] text-lg font-medium" required />
              </div>
              <div class="space-y-3">
                <label class="text-xs font-black uppercase tracking-[0.3em] text-[var(--text-muted)] px-1">Phone</label>
                <input type="tel" placeholder="+971 -- --- ----" class="w-full px-8 py-5 rounded-2xl bg-[var(--bg-primary)] border-2 border-[var(--border-subtle)] focus:border-[var(--accent-red)] outline-none transition-all text-[var(--text-primary)] text-lg font-medium" required />
              </div>
            </div>

            <div class="space-y-3">
              <label class="text-xs font-black uppercase tracking-[0.3em] text-[var(--text-muted)] px-1">The Objective</label>
              <textarea rows="4" placeholder="Tell us about your technical roadmap or growth bottlenecks..." class="w-full px-8 py-6 rounded-2xl bg-[var(--bg-primary)] border-2 border-[var(--border-subtle)] focus:border-[var(--accent-red)] outline-none transition-all text-[var(--text-primary)] resize-none text-lg font-medium" required></textarea>
            </div>

            <button type="submit" class="w-full py-6 bg-[var(--accent-red)] text-white font-black italic uppercase tracking-tighter text-3xl rounded-2xl hover:bg-black transition-all shadow-2xl shadow-red-600/30 active:scale-[0.98] group flex items-center justify-center gap-4">
              Start Now
              <svg class="w-8 h-8 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </button>
            <div class="flex items-center justify-center gap-4 pt-4">
               <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
               <p class="text-[10px] font-black uppercase tracking-widest text-[var(--text-muted)]">Strategy Engineers Active &bull; Avg response: 2 hrs</p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</Layout>
