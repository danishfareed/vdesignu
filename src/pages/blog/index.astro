---
import Layout from "../../layouts/Layout.astro";
import content from "../../data/site-content.json";
---

<Layout title="Blog - vdesignu" description="Insights & Resources from vdesignu" >
  <section class="max-w-4xl mx-auto py-16 px-6">
    <h1 class="text-4xl md:text-5xl font-bold text-white mb-8 gradient-text-red">Insights & Resources</h1>
    <p class="text-lg text-neutral-300 mb-12">Expert perspectives on digital growth, performance engineering, and market trends.</p>
    <div class="grid md:grid-cols-2 gap-8">
      {content.blog.posts.map((post) => (
        <article class="bg-neutral-900/50 glass rounded-xl p-6 hover:bg-neutral-800 transition-colors">
          <h2 class="text-2xl font-semibold text-white mb-2 gradient-text-red">{post.title}</h2>
          <p class="text-neutral-400 mb-4">{post.excerpt}</p>
          <a href={`/blog/${post.slug}`} class="inline-flex items-center text-red-400 hover:underline">
            Read article
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
          </a>
        </article>
      ))}
    </div>
  </section>
</Layout>
