---
import Layout from "../../layouts/Layout.astro";
import { services, industries, cities } from "../../config/site-config";
import { getEntry } from "astro:content";
import TableOfContents from "../../components/pillar/TableOfContents.astro";
import Callout from "../../components/pillar/Callout.astro";

export function getStaticPaths() {
    return services.map((service) => ({
        params: { service: service.slug },
        props: { service },
    }));
}

const { service } = Astro.params;
const { service: serviceProp } = Astro.props;

const entry = await getEntry("services", service);

if (!entry) {
    throw new Error(`Service content not found for ${service}`);
}

const { Content, headings } = await entry.render();
const { title, metaDescription, heroDescription, metrics, roadmap } =
    entry.data;
---

<Layout title={title} description={metaDescription}>
    <!-- Hero -->
    <section
        class="pt-40 pb-24 bg-[var(--bg-primary)] overflow-hidden relative"
    >
        <div class="absolute inset-0 bg-grid-white/[0.02] bg-[size:40px_40px]">
        </div>
        <div class="max-w-7xl mx-auto px-6 relative z-10">
            <span
                class="text-xs font-black uppercase tracking-[0.4em] text-[var(--accent-red)] mb-4 block"
                >Service Pillar Page</span
            >
            <h1
                class="text-6xl md:text-9xl font-black italic uppercase tracking-tighter leading-[0.8] mb-10"
            >
                Mastering <br />
                <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-[var(--text-primary)] to-[var(--text-muted)]"
                >
                    {serviceProp.name}
                </span>
            </h1>
            <p
                class="text-2xl text-[var(--text-secondary)] font-medium max-w-3xl leading-relaxed mb-12"
            >
                {heroDescription}
            </p>

            <!-- Metrics Injection -->
            <div
                class="grid grid-cols-2 md:grid-cols-4 gap-8 border-t border-[var(--border-subtle)] pt-8"
            >
                <div>
                    <div
                        class="text-4xl font-black italic text-[var(--text-primary)]"
                    >
                        {metrics.primary.value}
                    </div>
                    <div
                        class="text-xs font-bold uppercase text-[var(--text-muted)] tracking-widest"
                    >
                        {metrics.primary.label}
                    </div>
                </div>
                <div>
                    <div
                        class="text-4xl font-black italic text-[var(--text-primary)]"
                    >
                        {metrics.secondary.value}
                    </div>
                    <div
                        class="text-xs font-bold uppercase text-[var(--text-muted)] tracking-widest"
                    >
                        {metrics.secondary.label}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Master Content (Markdown Render) -->
    <section
        class="py-24 bg-[var(--bg-secondary)] border-y border-[var(--border-subtle)] relative"
    >
        <div class="max-w-[1400px] mx-auto px-6">
            <div class="grid lg:grid-cols-12 gap-12">
                <!-- COL 1: Sticky TOC (2 cols) -->
                <aside class="hidden lg:block lg:col-span-3">
                    <div class="sticky top-32">
                        <TableOfContents headings={headings} />
                    </div>
                </aside>

                <!-- COL 2: Main Content (6 cols) -->
                <main class="lg:col-span-6 min-w-0">
                    <div
                        class="prose prose-lg dark:prose-invert max-w-none
                        prose-headings:font-black prose-headings:italic prose-headings:uppercase
                        prose-h1:text-5xl prose-h2:text-3xl prose-h2:mt-16 prose-h2:mb-6 prose-h2:border-b prose-h2:border-[var(--border-subtle)] prose-h2:pb-4
                        prose-p:text-[var(--text-secondary)] prose-p:leading-loose prose-p:mb-6
                        prose-li:text-[var(--text-secondary)]
                        prose-strong:text-[var(--text-primary)] prose-strong:font-bold
                        prose-code:text-[var(--accent-red)] prose-code:bg-[var(--bg-primary)] prose-code:px-1 prose-code:py-0.5 prose-code:rounded
                        prose-blockquote:border-l-4 prose-blockquote:border-[var(--accent-red)] prose-blockquote:bg-[var(--bg-primary)] prose-blockquote:p-6 prose-blockquote:rounded-r-xl prose-blockquote:italic"
                    >
                        <Content components={{ Callout }} />
                    </div>
                </main>

                <!-- COL 3: Sticky Sidebar (3 cols) -->
                <aside class="hidden lg:block lg:col-span-3">
                    <div class="sticky top-32 space-y-8">
                        <!-- Key Metrics Card -->
                        <div
                            class="p-6 bg-[var(--bg-primary)] rounded-2xl border border-[var(--border-subtle)] shadow-xl relative overflow-hidden group"
                        >
                            <div
                                class="absolute top-0 right-0 p-4 opacity-10 group-hover:rotate-12 transition-transform"
                            >
                                <svg
                                    class="w-12 h-12"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M13 10V3L4 14h7v7l9-11h-7z"
                                    ></path></svg
                                >
                            </div>
                            <h3
                                class="text-xs font-black uppercase tracking-widest text-[var(--text-muted)] mb-6"
                            >
                                Exec Summary
                            </h3>
                            <div class="space-y-6">
                                <div>
                                    <div
                                        class="text-3xl font-black italic text-[var(--accent-red)]"
                                    >
                                        {metrics.primary.value}
                                    </div>
                                    <div
                                        class="text-xs font-bold uppercase text-[var(--text-secondary)]"
                                    >
                                        {metrics.primary.label}
                                    </div>
                                </div>
                                <div>
                                    <div
                                        class="text-3xl font-black italic text-[var(--accent-yellow)]"
                                    >
                                        {metrics.secondary.value}
                                    </div>
                                    <div
                                        class="text-xs font-bold uppercase text-[var(--text-secondary)]"
                                    >
                                        {metrics.secondary.label}
                                    </div>
                                </div>
                            </div>
                            <div
                                class="mt-8 pt-6 border-t border-[var(--border-subtle)]"
                            >
                                <a
                                    href="#contact"
                                    class="flex items-center justify-center w-full py-4 bg-[var(--text-primary)] text-[var(--bg-primary)] font-black uppercase tracking-widest text-xs rounded-xl hover:bg-[var(--accent-red)] transition-colors"
                                >
                                    Book Strategy Call
                                </a>
                            </div>
                        </div>

                        <!-- Sub-Services Map -->
                        <div
                            class="p-6 bg-[var(--bg-primary)] rounded-2xl border border-[var(--border-subtle)]"
                        >
                            <h3
                                class="text-xs font-black uppercase tracking-widest text-[var(--text-muted)] mb-6"
                            >
                                Expert Sub-Services
                            </h3>
                            <div class="space-y-3">
                                {
                                    [
                                        "Omnichannel Comms",
                                        "Data Unification",
                                        "WhatsApp Business",
                                        "Workflows",
                                        "Lead Management",
                                        "Campaigns",
                                        "Live Chats",
                                    ].map((sub) => (
                                        <div class="flex items-center gap-3 text-xs font-bold uppercase text-[var(--text-secondary)]">
                                            <div class="w-1.5 h-1.5 rounded-full bg-[var(--accent-red)]" />
                                            {sub}
                                        </div>
                                    ))
                                }
                            </div>
                        </div>

                        <!-- Author/Expert Card -->
                        <div
                            class="p-6 bg-[var(--bg-primary)] rounded-2xl border border-[var(--border-subtle)]"
                        >
                            <div class="flex items-center gap-4 mb-4">
                                <div
                                    class="w-12 h-12 bg-[var(--bg-secondary)] rounded-full flex items-center justify-center font-black italic border border-[var(--border-subtle)]"
                                >
                                    VD
                                </div>
                                <div>
                                    <div class="font-bold text-sm">
                                        vdesignu Engineering
                                    </div>
                                    <div
                                        class="text-xs text-[var(--text-muted)]"
                                    >
                                        Verified Industry Expert
                                    </div>
                                </div>
                            </div>
                            <p
                                class="text-xs text-[var(--text-secondary)] italic leading-relaxed"
                            >
                                "This guide is engineered for enterprise leaders
                                who need technical truth, not marketing fluff.
                                We solve for complexity."
                            </p>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </section>

    <!-- Roadmap Injection -->
    {
        roadmap && (
            <section class="py-24 bg-[var(--bg-primary)]">
                <div class="max-w-7xl mx-auto px-6">
                    <h2 class="text-4xl font-black italic uppercase tracking-tighter mb-12">
                        The{" "}
                        <span class="text-[var(--accent-red)]">
                            Engineering
                        </span>{" "}
                        Roadmap
                    </h2>
                    <div class="grid md:grid-cols-5 gap-4">
                        {roadmap.map((step) => (
                            <div class="p-6 bg-[var(--bg-card)] border border-[var(--border-subtle)] rounded-2xl hover:border-[var(--accent-red)] transition-colors group">
                                <div class="text-5xl font-black italic text-[var(--border-subtle)] group-hover:text-[var(--accent-red)] transition-colors mb-4">
                                    {step.step}
                                </div>
                                <h3 class="text-sm font-black uppercase mb-2">
                                    {step.title}
                                </h3>
                                <p class="text-xs text-[var(--text-muted)] leading-relaxed">
                                    {step.desc}
                                </p>
                            </div>
                        ))}
                    </div>
                </div>
            </section>
        )
    }

    <!-- Global Reach (Mesh Linking) -->
    <section class="py-24 bg-[var(--bg-primary)]">
        <div class="max-w-7xl mx-auto px-6">
            <div class="grid lg:grid-cols-2 gap-20">
                <div>
                    <h3
                        class="text-3xl font-black italic uppercase tracking-tighter mb-8"
                    >
                        Localized Hubs
                    </h3>
                    <p class="text-[var(--text-secondary)] mb-10">
                        Access our city-specific {
                            serviceProp.name.toLowerCase()
                        } centers across the GCC and beyond.
                    </p>
                    <div class="grid grid-cols-2 gap-4">
                        {
                            cities.map((city) => (
                                <a
                                    href={`/${city.slug}/${serviceProp.slug}`}
                                    class="p-5 bg-[var(--bg-secondary)] border border-[var(--border-subtle)] hover:border-[var(--accent-red)] rounded-xl text-left transition-all"
                                >
                                    <span class="block text-[10px] font-black uppercase tracking-widest text-[var(--accent-yellow)] mb-1">
                                        {city.country}
                                    </span>
                                    <span class="text-sm font-black uppercase tracking-tight">
                                        {city.name} Center
                                    </span>
                                </a>
                            ))
                        }
                    </div>
                </div>
                <div>
                    <h3
                        class="text-3xl font-black italic uppercase tracking-tighter mb-8"
                    >
                        Industry Specializations
                    </h3>
                    <p class="text-[var(--text-secondary)] mb-10">
                        See how we adapt {serviceProp.name.toLowerCase()} for your
                        specific sector.
                    </p>
                    <div class="grid grid-cols-2 gap-4">
                        {
                            industries.slice(0, 10).map((industry) => (
                                <a
                                    href={`/dubai/${industry.slug}/${serviceProp.slug}`}
                                    class="p-5 bg-[var(--bg-secondary)] border border-[var(--border-subtle)] hover:border-[var(--accent-red)] rounded-xl text-left transition-all"
                                >
                                    <span class="text-sm font-black uppercase tracking-tight">
                                        {industry.name}
                                    </span>
                                </a>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>
