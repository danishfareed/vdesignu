---
import Layout from "../../layouts/Layout.astro";
import { services, industries, cities } from "../../config/site-config";
import { getEntry } from "astro:content";

export function getStaticPaths() {
    return services.map((service) => ({
        params: { service: service.slug },
        props: { service },
    }));
}

const { service } = Astro.params;
const { service: serviceProp } = Astro.props;

const entry = await getEntry("services", service);

if (!entry) {
    throw new Error(`Service content not found for ${service}`);
}

const { Content } = await entry.render();
const { title, metaDescription, heroDescription, metrics, roadmap } =
    entry.data;
---

<Layout title={title} description={metaDescription}>
    <!-- Hero -->
    <section
        class="pt-40 pb-24 bg-[var(--bg-primary)] overflow-hidden relative"
    >
        <div class="absolute inset-0 bg-grid-white/[0.02] bg-[size:40px_40px]">
        </div>
        <div class="max-w-7xl mx-auto px-6 relative z-10">
            <span
                class="text-xs font-black uppercase tracking-[0.4em] text-[var(--accent-red)] mb-4 block"
                >Service Pillar Page</span
            >
            <h1
                class="text-6xl md:text-9xl font-black italic uppercase tracking-tighter leading-[0.8] mb-10"
            >
                Mastering <br />
                <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-[var(--text-primary)] to-[var(--text-muted)]"
                >
                    {serviceProp.name}
                </span>
            </h1>
            <p
                class="text-2xl text-[var(--text-secondary)] font-medium max-w-3xl leading-relaxed mb-12"
            >
                {heroDescription}
            </p>

            <!-- Metrics Injection -->
            <div
                class="grid grid-cols-2 md:grid-cols-4 gap-8 border-t border-[var(--border-subtle)] pt-8"
            >
                <div>
                    <div
                        class="text-4xl font-black italic text-[var(--text-primary)]"
                    >
                        {metrics.primary.value}
                    </div>
                    <div
                        class="text-xs font-bold uppercase text-[var(--text-muted)] tracking-widest"
                    >
                        {metrics.primary.label}
                    </div>
                </div>
                <div>
                    <div
                        class="text-4xl font-black italic text-[var(--text-primary)]"
                    >
                        {metrics.secondary.value}
                    </div>
                    <div
                        class="text-xs font-bold uppercase text-[var(--text-muted)] tracking-widest"
                    >
                        {metrics.secondary.label}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Master Content (Markdown Render) -->
    <section
        class="py-24 bg-[var(--bg-secondary)] border-y border-[var(--border-subtle)]"
    >
        <div class="max-w-4xl mx-auto px-6">
            <div
                class="prose prose-xl dark:prose-invert text-[var(--text-secondary)] prose-headings:font-black prose-headings:italic prose-headings:uppercase prose-strong:text-[var(--text-primary)]"
            >
                <Content />
            </div>
        </div>
    </section>

    <!-- Roadmap Injection -->
    {
        roadmap && (
            <section class="py-24 bg-[var(--bg-primary)]">
                <div class="max-w-7xl mx-auto px-6">
                    <h2 class="text-4xl font-black italic uppercase tracking-tighter mb-12">
                        The{" "}
                        <span class="text-[var(--accent-red)]">
                            Engineering
                        </span>{" "}
                        Roadmap
                    </h2>
                    <div class="grid md:grid-cols-5 gap-4">
                        {roadmap.map((step) => (
                            <div class="p-6 bg-[var(--bg-card)] border border-[var(--border-subtle)] rounded-2xl hover:border-[var(--accent-red)] transition-colors group">
                                <div class="text-5xl font-black italic text-[var(--border-subtle)] group-hover:text-[var(--accent-red)] transition-colors mb-4">
                                    {step.step}
                                </div>
                                <h3 class="text-sm font-black uppercase mb-2">
                                    {step.title}
                                </h3>
                                <p class="text-xs text-[var(--text-muted)] leading-relaxed">
                                    {step.desc}
                                </p>
                            </div>
                        ))}
                    </div>
                </div>
            </section>
        )
    }

    <!-- Global Reach (Mesh Linking) -->
    <section class="py-24 bg-[var(--bg-primary)]">
        <div class="max-w-7xl mx-auto px-6">
            <div class="grid lg:grid-cols-2 gap-20">
                <div>
                    <h3
                        class="text-3xl font-black italic uppercase tracking-tighter mb-8"
                    >
                        Localized Hubs
                    </h3>
                    <p class="text-[var(--text-secondary)] mb-10">
                        Access our city-specific {
                            serviceProp.name.toLowerCase()
                        } centers across the GCC and beyond.
                    </p>
                    <div class="grid grid-cols-2 gap-4">
                        {
                            cities.map((city) => (
                                <a
                                    href={`/${city.slug}/${serviceProp.slug}`}
                                    class="p-5 bg-[var(--bg-secondary)] border border-[var(--border-subtle)] hover:border-[var(--accent-red)] rounded-xl text-left transition-all"
                                >
                                    <span class="block text-[10px] font-black uppercase tracking-widest text-[var(--accent-yellow)] mb-1">
                                        {city.country}
                                    </span>
                                    <span class="text-sm font-black uppercase tracking-tight">
                                        {city.name} Center
                                    </span>
                                </a>
                            ))
                        }
                    </div>
                </div>
                <div>
                    <h3
                        class="text-3xl font-black italic uppercase tracking-tighter mb-8"
                    >
                        Industry Specializations
                    </h3>
                    <p class="text-[var(--text-secondary)] mb-10">
                        See how we adapt {serviceProp.name.toLowerCase()} for your
                        specific sector.
                    </p>
                    <div class="grid grid-cols-2 gap-4">
                        {
                            industries.slice(0, 10).map((industry) => (
                                <a
                                    href={`/dubai/${industry.slug}/${serviceProp.slug}`}
                                    class="p-5 bg-[var(--bg-secondary)] border border-[var(--border-subtle)] hover:border-[var(--accent-red)] rounded-xl text-left transition-all"
                                >
                                    <span class="text-sm font-black uppercase tracking-tight">
                                        {industry.name}
                                    </span>
                                </a>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>
