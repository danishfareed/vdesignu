---
import Layout from "../../layouts/Layout.astro";
import { services } from "../../config/site-config";
import servicesContent from "../../data/services-content.json";

export function getStaticPaths() {
  return services.map((service) => ({
    params: { slug: service.slug },
    props: { service },
  }));
}

const { service } = Astro.props;
const content = servicesContent[service.slug as keyof typeof servicesContent];

// FAQ Schema
const faqSchema = content?.faqs ? {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": content.faqs.map((faq: any) => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
} : null;
---

<Layout 
  title={content?.title || service.name} 
  description={content?.metaDescription || `Premium ${service.name} solutions for B2B and B2C brands.`}
>
  {faqSchema && <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />}

  <!-- Service Hero -->
  <section class="pt-40 pb-24 bg-[var(--bg-primary)] overflow-hidden relative">
    <div class="absolute inset-x-0 bottom-0 h-px bg-gradient-to-r from-transparent via-[var(--border-subtle)] to-transparent"></div>
    <div class="absolute top-0 right-0 w-[800px] h-[800px] bg-red-600/5 rounded-full blur-[150px]"></div>
    
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-400 text-xs font-black uppercase tracking-[0.3em] mb-8 border border-red-100 dark:border-red-900/30">
            Precision Engineering
          </div>
          <h1 class="text-5xl md:text-8xl font-black italic uppercase tracking-tighter leading-[0.9] text-[var(--text-primary)] mb-8">
            {content?.title?.split('&')[0] || service.name}
            <span class="text-[var(--accent-red)]">{content?.title?.split('&')[1] ? `& ${content.title.split('&')[1]}` : ''}</span>
          </h1>
          <p class="text-2xl text-[var(--text-secondary)] leading-relaxed mb-10 font-medium max-w-xl">
             {content?.heroDescription || `Premium ${service.name.toLowerCase()} solutions for B2B and B2C brands.`}
          </p>
          <div class="flex flex-wrap gap-6 items-center">
             <a href="/contact" class="px-10 py-5 bg-[var(--accent-red)] text-white font-black italic rounded-xl hover:bg-black transition-all shadow-xl uppercase tracking-tighter text-2xl active:scale-95">
               Get Started
             </a>
             <div class="text-[var(--accent-yellow)] font-black text-sm uppercase tracking-widest flex items-center gap-2">
                <span class="w-2 h-2 rounded-full bg-[var(--accent-yellow)] animate-pulse"></span>
                AI-Search (GEO) Optimized
             </div>
          </div>
        </div>

        <div class="relative">
           <div class="aspect-square bg-[var(--bg-card)] rounded-[4rem] p-16 overflow-hidden border-2 border-[var(--border-subtle)] relative group">
              <div class="absolute inset-0 grid-pattern opacity-10"></div>
              <div class="absolute -top-24 -right-24 w-64 h-64 bg-[var(--accent-yellow)]/10 rounded-full blur-3xl group-hover:bg-[var(--accent-yellow)]/20 transition-colors"></div>
              <div class="relative z-10 h-full flex flex-col justify-between">
                 <div class="text-9xl font-black italic tracking-tighter text-[var(--accent-red)] leading-none select-none">
                   GROWTH<span class="text-[var(--accent-yellow)]">.</span>
                 </div>
                 <div class="text-4xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] leading-[0.9]">
                    BUILDING<br/>
                    <span class="text-[var(--accent-red)]">REVENUE</span><br/>
                    SYSTEMS<span class="text-[var(--accent-yellow)]">.</span>
                 </div>
              </div>
           </div>
           
           <!-- Overlay Badge -->
           <div class="absolute -bottom-10 -right-6 bg-[var(--bg-primary)] border-2 border-[var(--accent-red)] p-8 rounded-[2rem] shadow-2xl z-20">
              <div class="text-xs font-black uppercase tracking-[0.3em] text-red-600 mb-2">B2B & B2C</div>
              <div class="text-3xl font-black italic tracking-tighter text-[var(--text-primary)]">Global Standard</div>
           </div>
        </div>
      </div>
    </div>
  </section>

  {content && (
    <>
      <!-- Operational Hub -->
      <section class="py-24 bg-[var(--bg-secondary)] relative overflow-hidden">
        <div class="absolute top-0 right-0 w-96 h-96 bg-[var(--accent-yellow)]/5 rounded-full blur-3xl"></div>
        <div class="max-w-7xl mx-auto px-6">
          <div class="grid lg:grid-cols-3 gap-16 items-start">
             <div class="lg:col-span-1">
                <h2 class="text-4xl md:text-6xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-8 leading-none">
                  The <span class="text-[var(--accent-red)]">Edge</span>.
                </h2>
                <div class="prose prose-xl dark:prose-invert text-[var(--text-secondary)]">
                   <p class="font-medium leading-relaxed">{content.sections.overview.content}</p>
                </div>
             </div>
             
             <div class="lg:col-span-2 grid md:grid-cols-2 gap-6">
                {content.sections.whatWeOffer.items.map((item: any) => (
                  <div class="bg-[var(--bg-card)] p-10 rounded-[3rem] border-2 border-[var(--border-subtle)] hover:border-[var(--accent-red)] transition-all group">
                     <div class="w-12 h-12 rounded-xl bg-[var(--accent-yellow)]/10 flex items-center justify-center mb-6 group-hover:bg-[var(--accent-red)] group-hover:text-white transition-colors">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
                        </svg>
                     </div>
                     <h3 class="text-2xl font-black text-[var(--text-primary)] uppercase tracking-tight mb-4 group-hover:text-[var(--accent-red)] transition-colors">
                       {item.title}
                     </h3>
                     <p class="text-[var(--text-secondary)] text-base leading-relaxed">
                       {item.description}
                     </p>
                  </div>
                ))}
             </div>
          </div>
        </div>
      </section>
      
      {/* New: Market Relevance Section */}
      {content.sections.marketRelevance && (
        <section class="py-24 bg-[var(--bg-primary)] border-t border-[var(--border-subtle)]">
          <div class="max-w-7xl mx-auto px-6">
            <div class="grid lg:grid-cols-2 gap-20 items-center">
              <div>
                <h2 class="text-4xl md:text-6xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-8 leading-none">
                   {content.sections.marketRelevance.title}
                </h2>
                <div class="prose prose-xl dark:prose-invert text-[var(--text-secondary)]">
                   <p class="font-medium leading-relaxed">{content.sections.marketRelevance.content}</p>
                </div>
              </div>
              <div class="aspect-video bg-[var(--bg-secondary)] rounded-[3rem] border-2 border-[var(--border-subtle)] flex items-center justify-center relative overflow-hidden group">
                 <div class="absolute inset-0 bg-gradient-to-br from-[var(--accent-red)]/10 to-transparent"></div>
                 <div class="text-center relative z-10 px-8">
                    <div class="text-6xl font-black italic tracking-tighter text-[var(--accent-red)] mb-4">Scalable</div>
                    <div class="text-xs font-black uppercase tracking-widest text-[var(--text-primary)]">Built for Gulf & Global Markets</div>
                 </div>
              </div>
            </div>
          </div>
        </section>
      )}

      {/* New: Detailed Approach Section */}
      {content.sections.detailedApproach && (
        <section class="py-32 bg-[var(--bg-secondary)] relative">
          <div class="max-w-4xl mx-auto px-6">
             <div class="inline-block px-4 py-2 bg-[var(--accent-yellow)] text-black text-[10px] font-black uppercase tracking-[0.4em] rounded-lg rotate-[-1deg] mb-12 shadow-lg">Our Deep Dive</div>
             <h2 class="text-5xl md:text-8xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-12 leading-none">
                {content.sections.detailedApproach.title}
             </h2>
             <div class="prose prose-2xl dark:prose-invert text-[var(--text-secondary)]">
                <p class="font-medium leading-relaxed italic">{content.sections.detailedApproach.content}</p>
             </div>
          </div>
        </section>
      )}

      <!-- Execution Roadmap -->
      <section class="py-24 bg-[var(--bg-primary)]">
        <div class="max-w-7xl mx-auto px-6 text-center">
            <h2 class="text-4xl md:text-8xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-20 leading-none">
               How We <span class="text-[var(--accent-red)]">Build</span><span class="text-[var(--accent-yellow)]">.</span>
            </h2>
            
            <div class="grid lg:grid-cols-3 md:grid-cols-2 gap-12">
               {content.sections.process.steps.map((step: string, idx: number) => (
                 <div class="text-left relative group">
                    <div class="text-8xl font-black italic tracking-tighter text-[var(--accent-red)] opacity-10 mb-6 group-hover:opacity-30 transition-opacity">0{idx+1}</div>
                    <div class="absolute top-8 left-0">
                       <h4 class="text-2xl font-black text-[var(--text-primary)] uppercase tracking-tight mb-2">Phase {idx+1}</h4>
                       <p class="text-[var(--text-secondary)] font-medium max-w-xs">{step}</p>
                    </div>
                 </div>
               ))}
            </div>
        </div>
      </section>

      <!-- Strategy FAQs -->
      <section class="py-24 bg-[var(--bg-secondary)] border-t border-[var(--border-subtle)]">
        <div class="max-w-4xl mx-auto px-6">
           <h2 class="text-4xl md:text-7xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-16 text-center">
              Strategy <span class="text-[var(--accent-yellow)]">FAQ</span>
           </h2>
           <div class="space-y-6">
             {content.faqs.map((faq: any) => (
               <details class="group bg-[var(--bg-primary)] border-2 border-[var(--border-subtle)] rounded-[2.5rem] overflow-hidden">
                 <summary class="flex items-center justify-between p-8 md:p-10 cursor-pointer list-none">
                    <span class="text-xl md:text-2xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] pr-12">{faq.question}</span>
                    <div class="w-12 h-12 rounded-full border-2 border-[var(--border-subtle)] flex items-center justify-center group-open:bg-[var(--accent-red)] group-open:border-[var(--accent-red)] transition-all">
                       <svg class="w-6 h-6 text-[var(--text-muted)] group-open:text-white transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M19 9l-7 7-7-7"/>
                       </svg>
                    </div>
                 </summary>
                 <div class="px-8 md:px-10 pb-10">
                    <p class="text-[var(--text-secondary)] leading-relaxed text-xl font-medium">{faq.answer}</p>
                 </div>
               </details>
             ))}
           </div>
        </div>
      </section>
    </>
  )}

  <!-- Final CTA -->
  <section class="py-24 bg-[var(--accent-red)] text-white text-center rounded-t-[5rem]">
    <div class="max-w-4xl mx-auto px-6">
      <h2 class="text-4xl md:text-8xl font-black italic uppercase tracking-tighter mb-10 leading-[0.9]">
        Ready to Dominate <br/><span class="text-[var(--accent-yellow)]">Your Market?</span>
      </h2>
      <a href="/contact" class="inline-block px-12 py-6 bg-white text-[var(--accent-red)] font-black italic uppercase tracking-tighter text-2xl rounded-xl hover:bg-[var(--accent-yellow)] hover:text-black transition-all shadow-2xl active:scale-95">
        Get Started
      </a>
    </div>
  </section>
</Layout>
