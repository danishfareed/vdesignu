---
import Layout from "../../layouts/Layout.astro";
import { services } from "../../config/site-config";
import servicesContent from "../../data/services-content.json";

export function getStaticPaths() {
  return services.map((service) => ({
    params: { slug: service.slug },
    props: { service },
  }));
}

const { service } = Astro.props;
const content = servicesContent[service.slug as keyof typeof servicesContent];

// FAQ Schema
const faqSchema = content?.faqs ? {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": content.faqs.map((faq: any) => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
} : null;
---

<Layout 
  title={content?.title || service.name} 
  description={content?.metaDescription || `Enterprise-grade ${service.name} solutions for B2B industrial leaders.`}
>
  {faqSchema && <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />}

  <!-- Service Hero -->
  <section class="pt-40 pb-24 bg-[var(--bg-primary)] overflow-hidden relative">
    <div class="absolute inset-x-0 bottom-0 h-px bg-gradient-to-r from-transparent via-[var(--border-subtle)] to-transparent"></div>
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-400 text-xs font-bold uppercase tracking-widest mb-8">
            Specialized B2B Solution
          </div>
          <h1 class="text-5xl md:text-8xl font-black italic uppercase tracking-tighter leading-[0.9] text-[var(--text-primary)] mb-8">
            {content?.title || service.name}
          </h1>
          <p class="text-2xl text-[var(--text-secondary)] leading-relaxed mb-10 font-medium">
             {content?.heroDescription || `Enterprise-grade ${service.name.toLowerCase()} systems built for industrial revenue growth.`}
          </p>
          <div class="flex gap-4">
             <a href="/contact" class="px-10 py-5 bg-red-600 text-white font-bold rounded-full hover:bg-black transition-all shadow-xl uppercase tracking-tight">
               Build Your Strategy
             </a>
          </div>
        </div>

        <div class="relative">
           <div class="aspect-square bg-[var(--bg-secondary)] rounded-[3rem] p-12 overflow-hidden border-2 border-[var(--border-subtle)] relative">
              <div class="absolute inset-0 grid-pattern opacity-10"></div>
              <div class="relative z-10 h-full flex flex-col justify-between">
                 <div class="text-7xl font-black italic tracking-tighter text-red-600">ROI<span class="text-[var(--text-primary)]">.</span></div>
                 <div class="text-3xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] leading-none">
                    ENGINEERING<br/><span class="text-red-600">INDUSTRIAL</span><br/>GROWTH.
                 </div>
              </div>
           </div>
           
           <!-- Local Trust Signal -->
           <div class="absolute -bottom-6 -right-6 bg-white dark:bg-neutral-900 border-2 border-red-600 p-6 rounded-2xl shadow-2xl z-20 whitespace-nowrap">
              <div class="text-xs font-bold uppercase tracking-widest text-red-600 mb-1">Regional Impact</div>
              <div class="text-2xl font-black italic tracking-tighter text-[var(--text-primary)]">200+ Projects</div>
           </div>
        </div>
      </div>
    </div>
  </section>

  {content && (
    <>
      <!-- Overview & Features -->
      <section class="py-24 bg-[var(--bg-secondary)]">
        <div class="max-w-7xl mx-auto px-6">
          <div class="grid lg:grid-cols-3 gap-16 items-start">
             <div class="lg:col-span-1">
                <h2 class="text-3xl md:text-5xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-6 leading-tight">
                  The <span class="text-red-600">Industrial</span> Advantage.
                </h2>
                <div class="prose prose-lg dark:prose-invert text-[var(--text-secondary)]">
                   <p>{content.sections.overview.content}</p>
                </div>
             </div>
             
             <div class="lg:col-span-2 grid md:grid-cols-2 gap-6">
                {content.sections.whatWeOffer.items.map((item: any) => (
                  <div class="bg-[var(--bg-card)] p-8 rounded-3xl border-2 border-[var(--border-subtle)] hover:border-red-500 transition-all group">
                     <h3 class="text-xl font-bold text-[var(--text-primary)] uppercase tracking-tight mb-3 group-hover:text-red-600">
                       {item.title}
                     </h3>
                     <p class="text-[var(--text-muted)] text-sm leading-relaxed">
                       {item.description}
                     </p>
                  </div>
                ))}
             </div>
          </div>
        </div>
      </section>

      <!-- Why Choose Us / Process -->
      <section class="py-24 bg-[var(--bg-primary)]">
        <div class="max-w-7xl mx-auto px-6">
           <div class="text-center mb-20">
              <h2 class="text-4xl md:text-7xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-4">
                 How We <span class="text-red-600">Execute</span>.
              </h2>
           </div>
           
           <div class="grid lg:grid-cols-4 gap-8">
              {content.sections.process.steps.map((step: string, idx: number) => (
                <div class="relative group">
                   <div class="text-6xl font-black italic tracking-tighter text-red-600 opacity-20 mb-4 group-hover:opacity-100 transition-opacity">0{idx+1}</div>
                   <h4 class="text-xl font-bold text-[var(--text-primary)] uppercase tracking-tight mb-3">Phase {idx+1}</h4>
                   <p class="text-[var(--text-muted)] text-sm leading-relaxed">{step}</p>
                </div>
              ))}
           </div>
        </div>
      </section>

      <!-- FAQs -->
      <section class="py-24 bg-[var(--bg-secondary)]">
        <div class="max-w-4xl mx-auto px-6">
           <h2 class="text-4xl md:text-6xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-12 text-center">
              Strategy <span class="text-red-600">FAQs</span>
           </h2>
           <div class="space-y-4">
             {content.faqs.map((faq: any) => (
               <details class="group bg-[var(--bg-primary)] border-2 border-[var(--border-subtle)] rounded-2xl overflow-hidden">
                 <summary class="flex items-center justify-between p-6 md:p-8 cursor-pointer list-none">
                    <span class="text-lg md:text-xl font-bold text-[var(--text-primary)] uppercase tracking-tight pr-8">{faq.question}</span>
                    <div class="w-8 h-8 rounded-full border-2 border-[var(--border-subtle)] flex items-center justify-center group-open:bg-red-600 group-open:border-red-600 transition-all">
                       <svg class="w-4 h-4 text-[var(--text-muted)] group-open:text-white transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                       </svg>
                    </div>
                 </summary>
                 <div class="px-6 md:px-8 pb-8">
                    <p class="text-[var(--text-secondary)] leading-relaxed text-lg">{faq.answer}</p>
                 </div>
               </details>
             ))}
           </div>
        </div>
      </section>
    </>
  )}

  <!-- Final CTA -->
  <section class="py-24 bg-red-600 text-white text-center">
    <div class="max-w-4xl mx-auto px-6">
      <h2 class="text-4xl md:text-7xl font-black italic uppercase tracking-tighter mb-8 leading-tight">
        Ready to Dominate Your Sector?
      </h2>
      <a href="/contact" class="inline-block px-12 py-6 bg-white text-red-600 font-black italic uppercase tracking-tighter text-2xl rounded-full hover:bg-black hover:text-white transition-all shadow-2xl">
        Book Strategy Consultation
      </a>
    </div>
  </section>
</Layout>
