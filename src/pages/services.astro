---
import Layout from "../layouts/Layout.astro";
import { services } from "../config/site-config";
import servicesContent from "../data/services-content.json";

const displayServices = services.map(s => ({
  ...s,
  content: servicesContent[s.slug as keyof typeof servicesContent]
}));

---

<Layout title="Strategic Digital Capabilities | vdesignu" description="Expert digital engineering, custom platforms, and AI solutions for B2B and B2C brands. Precision-engineered for Gulf and global markets.">
  <!-- Hero -->
  <section class="pt-40 pb-20 bg-[var(--bg-primary)] overflow-hidden relative">
    <div class="absolute inset-x-0 bottom-0 h-px bg-gradient-to-r from-transparent via-[var(--border-subtle)] to-transparent"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-red-600/5 rounded-full blur-[120px]"></div>
    
    <div class="relative z-10 max-w-6xl mx-auto px-6 text-center">
      <h1 class="text-4xl md:text-6xl lg:text-7xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-8 leading-none">
        Skills to <span class="text-[var(--accent-red)]">Grow</span> your<br/> business<span class="text-[var(--accent-yellow)]">.</span>
      </h1>
      <p class="text-2xl text-[var(--text-secondary)] max-w-3xl mx-auto leading-relaxed font-medium">
        We build websites and AI systems that help B2B and B2C companies find more customers and close more deals.
      </p>
    </div>
  </section>
  
  <!-- Services Hub -->
  <section class="py-24 bg-[var(--bg-secondary)]">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-8">
        {displayServices.map((service, i) => (
          <div id={service.slug} class="bg-[var(--bg-card)] p-12 rounded-[3.5rem] border-2 border-[var(--border-subtle)] hover:border-[var(--accent-red)] transition-all duration-500 group relative overflow-hidden">
            <!-- Numbering -->
            <div class="absolute top-0 right-0 p-10 text-8xl font-black italic tracking-tighter text-[var(--accent-red)] opacity-5 group-hover:opacity-10 transition-opacity">
              {String(i + 1).padStart(2, '0')}
            </div>

            <div class="relative z-10">
              <h3 class="text-3xl md:text-5xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-6 group-hover:text-[var(--accent-red)] transition-colors leading-none">
                {service.name.split('(')[0]}
              </h3>
              
              <p class="text-lg text-[var(--text-secondary)] leading-relaxed mb-10 max-w-xl">
                {service.content?.heroDescription?.split('.')[0]}. Simple, effective, and built for your business.
              </p>

              <!-- Capability Tags -->
              <div class="flex flex-wrap gap-3 mb-12">
                 {service.content?.sections.whatWeOffer.items.slice(0, 3).map((item: any) => (
                   <span class="text-[10px] font-black uppercase tracking-widest px-4 py-2 bg-red-50 dark:bg-red-900/10 text-red-600 dark:text-red-400 rounded-full border border-red-100 dark:border-red-900/30">
                     {item.title}
                   </span>
                 ))}
              </div>

              <div class="flex items-center gap-6">
                 <a href={`/services/${service.slug}`} class="px-8 py-4 bg-[var(--text-primary)] text-[var(--bg-primary)] font-black italic uppercase tracking-tighter text-xl rounded-xl hover:bg-[var(--accent-red)] hover:text-white transition-all scale-100 hover:scale-105 active:scale-95 shadow-lg">
                    Learn More
                 </a>
                 <a href="/contact" class="text-sm font-black uppercase tracking-[0.2em] text-[var(--text-muted)] hover:text-[var(--accent-red)] transition-colors">
                    Get Quote &rarr;
                 </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-[#0a0a0a] text-white text-center rounded-t-[5rem]">
    <div class="max-w-4xl mx-auto px-6">
      <h2 class="text-4xl md:text-8xl font-black italic uppercase tracking-tighter mb-10 leading-[0.9]">
        Ready to <span class="text-[var(--accent-red)]">Grow</span> your<br/> business<span class="text-[var(--accent-yellow)]">?</span>
      </h2>
      <p class="text-xl opacity-90 mb-12 max-w-2xl mx-auto font-medium">
        Our experts are ready to audit your business and show you how to find more customers.
      </p>
      <a href="/contact" class="inline-block px-12 py-6 bg-[var(--accent-red)] text-white font-black italic uppercase tracking-tighter text-2xl rounded-xl hover:bg-white hover:text-black transition-all shadow-2xl active:scale-95">
        Get Free Audit
      </a>
    </div>
  </section>
</Layout>
