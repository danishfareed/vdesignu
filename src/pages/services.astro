---
import Layout from "../layouts/Layout.astro";
import { services, cities } from "../config/site-config";
import servicesContent from "../data/services-content.json";

const displayServices = services.map((s) => ({
  ...s,
  content: servicesContent[s.slug as keyof typeof servicesContent],
}));
---

<Layout
  title="Strategic Digital Capabilities | vdesignu Multi-Market Growth"
  description="High-performance website development, SEO, and AI systems for B2B/B2C brands. Architecture designed for sub-second speeds and maximum conversion."
>
  <!-- Hero -->
  <section
    class="pt-40 pb-24 bg-[var(--bg-primary)] overflow-hidden relative border-b border-[var(--border-subtle)]"
  >
    <div class="max-w-7xl mx-auto px-6 relative z-10">
      <h1
        class="text-6xl md:text-9xl font-black italic uppercase tracking-tighter leading-[0.8] mb-12"
      >
        The <span class="text-[var(--accent-red)]">Growth</span>
        <br />
        <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-[var(--text-primary)] to-[var(--text-muted)]"
        >
          Capabilities
        </span>
      </h1>
      <p
        class="text-2xl text-[var(--text-secondary)] max-w-3xl leading-relaxed font-medium"
      >
        We engineering the technical layers of business success. From sub-second
        website architecture to AI-driven lead automation, our services are
        built to outperform standard boutique agencies.
      </p>
    </div>
  </section>

  <!-- Methodology (Word Count) -->
  <section class="py-24 bg-[var(--bg-secondary)]">
    <div class="max-w-4xl mx-auto px-6">
      <h2 class="text-4xl font-black italic uppercase tracking-tighter mb-8">
        Performance Is A Feature
      </h2>
      <div
        class="prose prose-xl dark:prose-invert text-[var(--text-secondary)]"
      >
        <p class="mb-8">
          We don't just "design" â€” we architect. Every service we offer is
          measured against its ability to reduce friction and increase revenue.
          By utilizing the Astro framework for our development and deep semantic
          analysis for our SEO, we ensure your digital foundation is
          unshakeable.
        </p>
        <p>
          In the hyper-competitive GCC and Global markets, a slow site or a
          generic SEO strategy is a liability. We provide the "Technical
          Hardening" required to win in 2026.
        </p>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-24 bg-[var(--bg-primary)]">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-10">
        {
          displayServices.map((service, i) => (
            <div
              id={service.slug}
              class="bg-[var(--bg-card)] p-12 rounded-[4rem] border border-[var(--border-subtle)] hover:border-[var(--accent-red)] transition-all duration-500 group relative overflow-hidden"
            >
              <div class="absolute top-0 right-0 p-10 text-9xl font-black italic tracking-tighter text-[var(--accent-red)] opacity-5 group-hover:opacity-10 transition-opacity">
                {String(i + 1).padStart(2, "0")}
              </div>

              <div class="relative z-10">
                <h3 class="text-4xl md:text-6xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-8 group-hover:text-[var(--accent-red)] transition-colors leading-none">
                  {service.name.split("(")[0]}
                </h3>

                <p class="text-xl text-[var(--text-secondary)] leading-relaxed mb-10 max-w-xl">
                  {service.content?.heroDescription?.split(".")[0]}. Engineered
                  for measurable B2B and B2C impact.
                </p>

                <div class="flex flex-col sm:flex-row gap-6 items-center">
                  <a
                    href={`/services/${service.slug}`}
                    class="w-full sm:w-auto px-10 py-5 bg-[var(--text-primary)] text-[var(--bg-primary)] font-black italic uppercase tracking-tighter text-2xl rounded-2xl hover:bg-[var(--accent-red)] hover:text-white transition-all shadow-xl"
                  >
                    The Pillar &xrarr;
                  </a>
                  <div class="flex gap-4">
                    {cities.slice(0, 3).map((c) => (
                      <a
                        href={`/${c.slug}/${service.slug}`}
                        class="text-[10px] font-black uppercase tracking-widest text-[var(--text-muted)] hover:text-[var(--accent-red)]"
                      >
                        {c.name} Hub
                      </a>
                    ))}
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-24 bg-[#0a0a0a] text-white text-center rounded-t-[5rem]">
    <div class="max-w-4xl mx-auto px-6">
      <h2
        class="text-4xl md:text-8xl font-black italic uppercase tracking-tighter mb-10 leading-[0.9]"
      >
        Ready to <span class="text-[var(--accent-red)]">Engineer</span> Your<br
        /> Growth<span class="text-[var(--accent-yellow)]">?</span>
      </h2>
      <a
        href="/contact"
        class="inline-block px-12 py-6 bg-[var(--accent-red)] text-white font-black italic uppercase tracking-tighter text-2xl rounded-xl hover:bg-white hover:text-black transition-all shadow-2xl active:scale-95"
      >
        Get Performance Audit
      </a>
    </div>
  </section>
</Layout>
