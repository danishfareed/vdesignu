---
import Layout from "../layouts/Layout.astro";
import { industries } from "../config/site-config";
---

<Layout title="Industries We Serve | vdesignu" description="Expert digital solutions for B2B and B2C sectors across the Gulf region. We help companies in tech, real estate, manufacturing, and more grow their revenue.">
  <!-- Hero -->
  <section class="pt-40 pb-16 bg-[var(--bg-primary)]">
    <div class="max-w-6xl mx-auto px-6 text-center">
      <h1 class="text-5xl md:text-8xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-8 leading-none">
        Industries<br/><span class="text-red-600">We grow</span>.
      </h1>
      <p class="text-2xl text-[var(--text-secondary)] max-w-3xl mx-auto leading-relaxed">
        Deep expertise for B2B and B2C leaders. We don't just speak your languageâ€”we understand your customers, your sales cycle, and your growth triggers.
      </p>
    </div>
  </section>
  
  <!-- All Industries -->
  <section class="py-24 bg-[var(--bg-secondary)]">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {industries.map((industry, i) => (
          <div class="bg-[var(--bg-card)] p-10 rounded-[2.5rem] border-2 border-[var(--border-subtle)] hover:border-red-500 transition-all group relative overflow-hidden">
            <div class="absolute top-0 right-0 p-8 text-6xl font-black italic tracking-tighter text-red-600 opacity-5 group-hover:opacity-20 transition-opacity">
              {String(i + 1).padStart(2, '0')}
            </div>
            
            <h3 class="text-3xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-6 group-hover:text-red-600 transition-colors">
              {industry.name}
            </h3>
            
            <p class="text-lg text-[var(--text-secondary)] leading-relaxed mb-8 relative z-10">
              Strategic digital systems built specifically for {industry.name.toLowerCase()} brands seeking to find more customers and grow revenue.
            </p>

            <div class="flex flex-col gap-4 mb-8 relative z-10">
               <a href={`/dubai/${industry.slug}/website-development`} class="text-[10px] font-black uppercase tracking-widest text-[var(--accent-red)] hover:translate-x-2 transition-transform inline-flex items-center gap-2">
                 Dubai Authority &xrarr;
               </a>
               <a href={`/riyadh/${industry.slug}/website-development`} class="text-[10px] font-black uppercase tracking-widest text-[var(--accent-yellow)] hover:translate-x-2 transition-transform inline-flex items-center gap-2">
                 Riyadh Performance &xrarr;
               </a>
            </div>

            {industry.keywords && (
              <div class="flex flex-wrap gap-2 relative z-10">
                {industry.keywords.map((kw: string) => (
                  <span class="text-xs font-bold uppercase tracking-widest px-3 py-1 bg-red-50 dark:bg-red-900/10 text-red-600 dark:text-red-400 rounded-full border border-red-100 dark:border-red-900/30">{kw}</span>
                ))}
              </div>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- CTA -->
  <section class="py-32 bg-[#0a0a0a] text-white text-center border-t border-[var(--border-subtle)]">
    <div class="max-w-5xl mx-auto px-6 text-center">
      <h2 class="text-4xl md:text-7xl font-black italic uppercase tracking-tighter mb-8 leading-none">
        Ready to <span class="text-[var(--accent-red)]">Grow</span> Your<br/> Business<span class="text-[var(--accent-yellow)]">?</span>
      </h2>
      <p class="text-2xl text-[var(--text-secondary)] mb-12">If you want to find more customers and close more deals, we have the plan for you.</p>
      <a href="/contact" class="inline-flex items-center gap-4 px-12 py-6 bg-[var(--accent-red)] text-white font-black italic uppercase tracking-tighter text-2xl rounded-xl hover:bg-white hover:text-black transition-all shadow-xl">
        Get Free Audit
      </a>
    </div>
  </section>
</Layout>
