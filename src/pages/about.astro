---
import Layout from "../layouts/Layout.astro";
import content from "../data/site-content.json";
const { about } = content;
---

<Layout title={about.metaTitle} description={about.metaDescription}>
  <!-- Hero Section -->
  <section class="pt-40 pb-24 bg-[var(--bg-primary)]">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h1 class="text-5xl md:text-8xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-8 leading-[0.9]">
        {about.title}
      </h1>
      <p class="text-2xl text-[var(--text-secondary)] leading-relaxed font-medium">
        {about.mission}
      </p>
    </div>
  </section>

  <!-- Story Section -->
  <section class="py-24 bg-[var(--bg-secondary)]">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div class="order-2 lg:order-1">
          <h2 class="text-3xl md:text-5xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-8">
            Our Story
          </h2>
          <div class="prose prose-xl dark:prose-invert text-[var(--text-secondary)]">
            <p>{about.story}</p>
          </div>
        </div>
        <div class="order-1 lg:order-2">
          <div class="aspect-square bg-red-600 rounded-[3rem] p-12 flex items-center justify-center relative">
            <div class="absolute inset-0 grid-pattern opacity-20"></div>
            <div class="text-[var(--bg-primary)] text-5xl font-black italic uppercase tracking-tighter text-center leading-none z-10">
              Disrupting<br/>Industrial<br/>Marketing.
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Values -->
  <section class="py-24 bg-[var(--bg-primary)]">
    <div class="max-w-7xl mx-auto px-6">
      <h2 class="text-4xl md:text-6xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-16 text-center">
        Our Operating Principles
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        {about.values.map((val: any) => (
          <div class="bg-[var(--bg-card)] border-2 border-[var(--border-subtle)] p-10 rounded-3xl hover:border-red-600 transition-all group">
            <h3 class="text-2xl font-black text-[var(--text-primary)] uppercase tracking-tight mb-4 group-hover:text-red-600">
              {val.title}
            </h3>
            <p class="text-[var(--text-secondary)] leading-relaxed text-lg">
              {val.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-red-600 text-white text-center">
    <div class="max-w-4xl mx-auto px-6">
      <h2 class="text-4xl md:text-6xl font-black italic uppercase tracking-tighter mb-8 leading-tight">
        {about.cta}
      </h2>
      <a href="/contact" class="inline-block px-12 py-6 bg-white text-red-600 font-black italic uppercase tracking-tighter text-2xl rounded-full hover:bg-black hover:text-white transition-all shadow-2xl">
        Connect With Us
      </a>
    </div>
  </section>
</Layout>
