---
import Layout from "../layouts/Layout.astro";
import content from "../data/site-content.json";
const { about } = content;
---

<Layout title={about.metaTitle} description={about.metaDescription}>
  <!-- Hero Section -->
  <section class="pt-40 pb-24 bg-[var(--bg-primary)] overflow-hidden relative">
    <div class="absolute top-0 right-0 w-[800px] h-[800px] bg-red-600/5 rounded-full blur-[150px]"></div>
    <div class="max-w-5xl mx-auto px-6 text-center relative z-10">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-400 text-xs font-black uppercase tracking-[0.3em] mb-10 border border-red-100 dark:border-red-900/30">
        Our Operating DNA
      </div>
      <h1 class="text-6xl md:text-9xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-10 leading-[0.85]">
        {about.title.split('for')[0]}<br/>
        <span class="text-[var(--accent-red)]">For</span> {about.title.split('for')[1]}
      </h1>
      <p class="text-2xl md:text-3xl text-[var(--text-secondary)] leading-relaxed font-medium max-w-4xl mx-auto">
        {about.mission}
      </p>
    </div>
  </section>

  <!-- Story Section -->
  <section class="py-24 bg-[var(--bg-secondary)] border-y border-[var(--border-subtle)]">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-20 items-center">
        <div class="order-2 lg:order-1">
          <h2 class="text-4xl md:text-6xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-10">
            The <span class="text-[var(--accent-red)]">VDESIGNU</span> Story.
          </h2>
          <div class="prose prose-xl dark:prose-invert text-[var(--text-secondary)] font-medium leading-relaxed mb-12">
            <p>{about.story}</p>
          </div>
          
          <div class="flex flex-wrap gap-8 items-center border-t border-[var(--border-subtle)] pt-12 mt-12">
             <div>
                <div class="text-4xl font-black italic text-[var(--accent-red)] mb-1">2012</div>
                <div class="text-[10px] font-black uppercase tracking-widest text-[var(--text-muted)]">Engineered From Day 1</div>
             </div>
             <div class="w-px h-12 bg-[var(--border-subtle)]"></div>
             <div>
                <div class="text-4xl font-black italic text-[var(--accent-red)] mb-1">GCC</div>
                <div class="text-[10px] font-black uppercase tracking-widest text-[var(--text-muted)]">Regional Focus</div>
             </div>
          </div>
        </div>
        <div class="order-1 lg:order-2">
          <div class="aspect-square bg-[var(--accent-red)] rounded-[4rem] p-16 flex items-center justify-center relative rotate-[2deg] shadow-2xl shadow-red-600/20 group">
            <div class="absolute inset-0 grid-pattern opacity-20"></div>
            <div class="absolute top-0 right-0 w-64 h-64 bg-[var(--accent-yellow)]/20 rounded-full blur-[80px] group-hover:bg-[var(--accent-yellow)]/30 transition-colors"></div>
            <div class="text-white text-5xl md:text-7xl font-black italic uppercase tracking-tighter text-center leading-[0.9] z-10 drop-shadow-2xl">
              Disrupting<br/>
              <span class="text-[var(--accent-yellow)]">Digital</span><br/>
              Growth
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Principles -->
  <section class="py-24 bg-[var(--bg-primary)]">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-20">
         <h2 class="text-4xl md:text-8xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] leading-none">
           Operating <span class="text-[var(--accent-red)]">Principles</span>
         </h2>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        {about.values.map((val: any, i: number) => (
          <div class="bg-[var(--bg-card)] border-2 border-[var(--border-subtle)] p-12 rounded-[3.5rem] hover:border-[var(--accent-red)] transition-all duration-500 group relative overflow-hidden">
            <div class="absolute top-0 right-0 p-10 text-8xl font-black italic tracking-tighter text-[var(--accent-red)] opacity-5 group-hover:opacity-10 transition-opacity">
              0{i+1}
            </div>
            <h3 class="text-3xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-6 group-hover:text-[var(--accent-red)] transition-colors">
              {val.title}
            </h3>
            <p class="text-[var(--text-secondary)] leading-relaxed text-lg font-medium">
              {val.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-32 bg-[var(--accent-red)] text-white text-center rounded-t-[5rem]">
    <div class="max-w-4xl mx-auto px-6">
      <h2 class="text-4xl md:text-8xl font-black italic uppercase tracking-tighter text-white mb-12 leading-[0.9]">
        {about.cta.split('?')[0]}<span class="text-[var(--accent-yellow)]">?</span>
      </h2>
      <a href="/contact" class="inline-block px-12 py-6 bg-white text-[var(--accent-red)] font-black italic uppercase tracking-tighter text-2xl rounded-xl hover:bg-black hover:text-white transition-all shadow-2xl active:scale-95">
        Connect With Our Experts
      </a>
    </div>
  </section>
</Layout>
