---
import Layout from "../layouts/Layout.astro";

const posts = [
  {
    title: "Generating High-Value B2B Leads in the Saudi Energy Sector",
    excerpt: "Generic ads fail in the Gulf's industrial markets. Learn how specialized SEO corridors and custom portals capture $1M+ contracts.",
    date: "Jan 12, 2026",
    category: "Lead Gen",
    readTime: "8 min"
  },
  {
    title: "The 0.8s Rule: Why Speed is the Core of Industrial Credibility",
    excerpt: "Industrial buyers are high-velocity. If your site takes 3 seconds to load, you're signaling a lack of precision to your most valuable clients.",
    date: "Jan 05, 2026",
    category: "Performance",
    readTime: "6 min"
  },
  {
    title: "Technical SEO for Industry Giants: Owning Intent",
    excerpt: "Stop ranking for 'web design' and start ranking for 'industrial valves supplier'. How targeted SEO routes deliver massive revenue.",
    date: "Dec 18, 2025",
    category: "Search Strategy",
    readTime: "10 min"
  }
];
---

<Layout title="Insights & Strategic Blueprints | vdesignu" description="Cold-hard data and strategic insights on B2B industrial growth, specialized SEO, and high-stakes lead generation in the Gulf.">
  <section class="pt-40 pb-24 bg-[var(--bg-primary)] overflow-hidden relative">
    <div class="absolute top-0 right-0 w-[800px] h-[800px] bg-red-600/5 rounded-full blur-[150px]"></div>
    
    <div class="max-w-7xl mx-auto px-6 relative z-10">
      <div class="flex flex-col md:flex-row md:items-end justify-between gap-12 mb-20">
        <div class="max-w-2xl">
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-400 text-xs font-black uppercase tracking-[0.3em] mb-8 border border-red-100 dark:border-red-900/30">
            Strategic Insights
          </div>
          <h1 class="text-6xl md:text-9xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-8 leading-[0.8] translate-y-[-5%]">
            The Growth <br/><span class="text-[var(--accent-red)]">Insights</span><span class="text-[var(--accent-yellow)]">.</span>
          </h1>
          <p class="text-2xl text-[var(--text-secondary)] font-medium leading-relaxed">
            Data, hard truths, and strategic blueprints for the world's most disciplined B2B industries.
          </p>
        </div>
        
        <div class="flex flex-wrap gap-4 scroll-hide pb-2">
          {["Strategy", "SEO", "Lead Gen", "Development"].map(cat => (
            <button class="px-8 py-4 rounded-xl border-2 border-[var(--border-subtle)] font-black text-xs uppercase tracking-widest text-[var(--text-muted)] hover:border-[var(--accent-red)] hover:text-[var(--accent-red)] transition-all whitespace-nowrap bg-[var(--bg-card)] shadow-lg active:scale-95">
              {cat}
            </button>
          ))}
        </div>
      </div>

      <!-- Posts List -->
      <div class="grid gap-16">
        {posts.map((post, i) => (
          <article class="group relative grid md:grid-cols-[1fr_3fr] gap-12 items-start py-16 border-t border-[var(--border-subtle)] hover:border-[var(--accent-red)] transition-all duration-500">
            <div class="text-[var(--text-muted)]">
               <div class="text-8xl font-black italic tracking-tighter text-[var(--accent-red)] opacity-5 mb-8 group-hover:opacity-20 transition-opacity">0{i+1}</div>
               <div class="space-y-2">
                 <div class="text-xs font-black italic uppercase tracking-[0.3em] text-[var(--accent-red)] group-hover:text-[var(--accent-yellow)] transition-colors">{post.category}</div>
                 <div class="text-[10px] font-black uppercase tracking-widest">{post.date} &bull; {post.readTime}</div>
               </div>
            </div>
            
            <div>
              <a href="/blog" class="block group">
                <h2 class="text-4xl md:text-7xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-8 group-hover:text-[var(--accent-red)] transition-colors leading-[0.85] translate-x-[-1%]">
                  {post.title}
                </h2>
                <p class="text-xl text-[var(--text-secondary)] leading-relaxed mb-10 max-w-4xl font-medium">
                  {post.excerpt}
                </p>
                <div class="inline-flex items-center gap-4 px-8 py-4 bg-[var(--bg-card)] border-2 border-[var(--border-subtle)] text-[var(--accent-red)] font-black italic rounded-xl hover:bg-[var(--accent-red)] hover:text-white transition-all uppercase tracking-tighter text-lg shadow-xl group-hover:px-12">
                  Read Blueprint
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </div>
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Newsletter CTA -->
  <section class="py-32 bg-[var(--bg-secondary)] border-t border-[var(--border-subtle)] rounded-t-[5rem] relative overflow-hidden">
    <div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-[var(--accent-yellow)]/5 rounded-full blur-[100px]"></div>
    <div class="max-w-5xl mx-auto px-6 text-center relative z-10">
      <h2 class="text-4xl md:text-8xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-12 leading-[0.9]">
        Get the <span class="text-[var(--accent-red)]">Growth</span> Blueprint<span class="text-[var(--accent-yellow)]">.</span>
      </h2>
      <p class="text-xl text-[var(--text-secondary)] mb-12 font-medium max-w-2xl mx-auto">Join 1,000+ B2B leaders receiving our weekly technical growth audit.</p>
      
      <form class="flex flex-col sm:flex-row gap-6 max-w-2xl mx-auto bg-[var(--bg-primary)] p-3 rounded-[2rem] border-2 border-[var(--border-subtle)] shadow-2xl">
        <input type="email" placeholder="Email Address" class="flex-grow px-8 py-4 rounded-xl bg-transparent border-none outline-none text-xl font-medium" />
        <button class="px-12 py-5 bg-[var(--accent-red)] text-white font-black italic rounded-[1.5rem] hover:bg-black transition-all uppercase tracking-tighter text-xl active:scale-95 shadow-xl">
          Subscribe
        </button>
      </form>
    </div>
  </section>
</Layout>
