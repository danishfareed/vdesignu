---
import Layout from "../layouts/Layout.astro";
import content from "../data/site-content.json";

const location = content.locations.jeddah;
---

<Layout title={location.hero.headline} description={location.hero.subheadline}>
  <!-- Hero -->
  <section class="pt-32 pb-20 relative overflow-hidden">
    <div class="absolute inset-0 grid-pattern opacity-10 dark:opacity-30"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[700px] h-[700px] radial-gradient-red opacity-40 dark:opacity-60"></div>
    
    <div class="relative z-10 max-w-6xl mx-auto px-6">
      <nav class="mb-12 flex items-center gap-2 text-[10px] font-black uppercase tracking-widest text-neutral-400">
        <a href="/" class="hover:text-red-600 transition-colors">Home</a>
        <span>/</span>
        <span class="text-red-600">Saudi Arabia Hub</span>
      </nav>
      
      <div class="max-w-4xl">
        <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 text-xs font-black uppercase tracking-widest mb-8">
          Vision 2030 Digital Partner
        </div>
        
        <h1 class="text-4xl md:text-7xl font-black text-neutral-900 dark:text-white uppercase italic tracking-tighter leading-[1.1] mb-8">
          {location.hero.headline.split('Saudi')[0]} <br /> <span class="gradient-text-red">Strategic Transformation</span>
        </h1>
        <p class="text-lg md:text-xl text-neutral-500 dark:text-neutral-400 leading-relaxed font-medium mb-12 max-w-2xl">
          {location.hero.subheadline}
        </p>
        
        <a 
          href="#contact"
          class="inline-flex items-center gap-4 px-10 py-5 bg-neutral-900 dark:bg-white text-white dark:text-neutral-900 text-lg font-black rounded-2xl hover:bg-green-700 dark:hover:bg-green-600 hover:text-white transition-all duration-300 shadow-2xl uppercase italic tracking-tighter group"
        >
          Consult Our KSA Team
          <div class="w-8 h-8 rounded-full bg-green-600 text-white flex items-center justify-center group-hover:bg-white group-hover:text-green-700 transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </div>
        </a>
      </div>
    </div>
  </section>
  
  <!-- Market Reality -->
  <section class="py-32 relative overflow-hidden">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-24 items-center">
        <div>
          <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-red-100 dark:bg-red-900/30 text-red-600 dark:text-red-400 text-xs font-black uppercase tracking-widest mb-6">
            Jeddah Intelligence
          </div>
          <h2 class="text-3xl md:text-5xl font-black text-neutral-900 dark:text-white uppercase italic tracking-tighter mb-8">{location.marketReality.title}</h2>
          <p class="text-lg text-neutral-500 dark:text-neutral-400 leading-relaxed font-medium">
            {location.marketReality.content}
          </p>
        </div>
        
        <div class="grid grid-cols-1 gap-6">
          {[
            { title: "Arabic-First UX", desc: "RTL design for the Saudi market", icon: "translate" },
            { title: "ZATCA Compliance", desc: "VAT-ready invoice infrastructure", icon: "document-text" },
            { title: "Saudi Payments", desc: "STC Pay & Mada integrations", icon: "credit-card" }
          ].map((item) => (
            <div class="glass dark:bg-neutral-900 p-8 rounded-3xl flex items-center gap-6 group hover:translate-x-2 transition-all">
              <div class="w-14 h-14 rounded-2xl bg-neutral-100 dark:bg-neutral-800 flex items-center justify-center group-hover:bg-green-600 group-hover:text-white transition-all">
                <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <div>
                <div class="text-lg font-black text-neutral-900 dark:text-white uppercase italic tracking-tighter">{item.title}</div>
                <div class="text-sm text-neutral-500 dark:text-neutral-400 font-medium">{item.desc}</div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
  
  <!-- Vision 2030 Alignment -->
  <section class="py-32 bg-neutral-50 dark:bg-neutral-900/50 relative overflow-hidden">
    <div class="absolute inset-0 radial-gradient-red opacity-10 dark:opacity-20 translate-x-1/2"></div>
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-20">
        <h2 class="text-3xl md:text-6xl font-black text-neutral-900 dark:text-white uppercase italic tracking-tighter mb-6">Supporting <span class="gradient-text-red">Vision 2030</span></h2>
        <p class="text-lg text-neutral-500 dark:text-neutral-400 font-medium max-w-2xl mx-auto">Accelerating digital transformation for the Kingdom's most ambitious enterprises.</p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {[
          { label: "100%", title: "Local Compliance", desc: "ZATCA and local hosting standards" },
          { label: "Bilingual", title: "Digital Performance", desc: "Arabic‑first high‑speed architecture" },
          { label: "Ready", title: "Scale Infrastructure", desc: "AI and CRM automation pathways" }
        ].map((stat) => (
          <div class="glass dark:bg-neutral-900 p-10 rounded-[2.5rem] text-center hover:-translate-y-2 transition-all">
            <div class="text-6xl font-black gradient-text-red italic tracking-tighter mb-4 uppercase">{stat.label}</div>
            <h3 class="text-xl font-black text-neutral-900 dark:text-white uppercase italic tracking-tighter mb-2">{stat.title}</h3>
            <p class="text-sm text-neutral-400 font-medium">{stat.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Success Story -->
  <section class="py-32 relative overflow-hidden">
    <div class="max-w-7xl mx-auto px-6">
      <div class="glass dark:bg-neutral-900 p-12 md:p-24 rounded-[3rem] relative overflow-hidden">
        <div class="absolute top-0 right-0 w-64 h-64 bg-green-600/5 rounded-bl-full"></div>
        <div class="grid lg:grid-cols-3 gap-16 items-center">
          <div class="lg:col-span-2">
            <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 text-xs font-black uppercase tracking-widest mb-8">
              KSA Performance
            </div>
            <h3 class="text-3xl md:text-5xl font-black text-neutral-900 dark:text-white uppercase italic tracking-tighter mb-8 leading-none">{location.caseStudy.title}</h3>
            <p class="text-lg text-neutral-500 dark:text-neutral-400 font-medium leading-relaxed mb-10">
              {location.caseStudy.content}
            </p>
          </div>
          <div class="text-center p-12 bg-white dark:bg-neutral-800 rounded-[2.5rem] shadow-2xl">
            <div class="text-8xl font-black text-green-600 italic tracking-tighter mb-2 leading-none uppercase">{location.caseStudy.metric}</div>
            <div class="text-xs font-black text-neutral-400 uppercase tracking-widest">{location.caseStudy.metricLabel}</div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- FAQ -->
  <section class="py-32 relative">
    <div class="max-w-4xl mx-auto px-6">
      <div class="text-center mb-20">
        <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-neutral-100 dark:bg-neutral-800 text-neutral-600 dark:text-neutral-400 text-xs font-black uppercase tracking-widest mb-6">
          KSA Intelligence Base
        </div>
        <h2 class="text-3xl md:text-5xl font-black text-neutral-900 dark:text-white uppercase italic tracking-tighter">Strategic Insights FAQ</h2>
      </div>
      
      <div class="space-y-4">
        {location.faq.map((item : any, i : number) => (
          <details class="glass dark:bg-neutral-900 rounded-[2rem] group" open={i === 0}>
            <summary class="p-8 cursor-pointer list-none flex items-center justify-between">
              <h3 class="text-xl font-black text-neutral-900 dark:text-white uppercase italic tracking-tighter pr-8">{item.question}</h3>
              <div class="w-10 h-10 rounded-full border border-neutral-200 dark:border-neutral-800 flex items-center justify-center group-open:bg-green-600 group-open:text-white transition-all">
                <svg class="w-5 h-5 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M19 9l-7 7-7-7" />
                </svg>
              </div>
            </summary>
            <div class="px-8 pb-8 text-neutral-500 dark:text-neutral-400 font-medium leading-relaxed ml-[5px]">
              {item.answer}
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>
  
  <!-- CTA -->
  <section id="contact" class="py-32 bg-green-700 relative overflow-hidden">
    <div class="absolute inset-0 radial-gradient-dark opacity-20"></div>
    <div class="max-w-4xl mx-auto px-6 text-center relative z-10">
      <h2 class="text-4xl md:text-7xl font-black text-white uppercase italic tracking-tighter mb-10 leading-none">
        Launch <br /> Saudi.
      </h2>
      <p class="text-green-100 text-lg font-medium mb-12 max-w-xl mx-auto">Our Jeddah team is ready to accelerate your Vision 2030 journey. Initiate a discovery protocol.</p>
      <a 
        href={`mailto:${content.contact.email}`}
        class="inline-flex items-center gap-4 px-12 py-6 bg-white text-neutral-900 text-xl font-black rounded-2xl hover:bg-black hover:text-white transition-all duration-300 shadow-2xl uppercase italic tracking-tighter"
      >
        Contact Jeddah Hub
        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </section>
</Layout>

<!-- FAQ Schema -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": location.faq.map(item => ({
    "@type": "Question",
    "name": item.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": item.answer
    }
  }))
})} />
