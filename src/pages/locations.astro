---
import Layout from "../layouts/Layout.astro";
import { cities, services } from "../config/site-config";

const uaeCities = cities.filter(c => c.country === 'UAE');
const ksaCities = cities.filter(c => c.country === 'KSA');
const otherCities = cities.filter(c => !['UAE', 'KSA'].includes(c.country));
---

<Layout title="Our Global & Regional Presence | vdesignu" description="Serving enterprises across the Gulf region - Dubai, Abu Dhabi, Riyadh, Jeddah, Doha, and more. Your regional digital growth partner.">
  <!-- Hero -->
  <section class="pt-40 pb-16 bg-[var(--bg-primary)]">
    <div class="max-w-6xl mx-auto px-6 text-center">
      <h1 class="text-5xl md:text-8xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-8 leading-none">
        Where We<br/><span class="text-red-600">Scale Brands</span>.
      </h1>
      <p class="text-2xl text-[var(--text-secondary)] max-w-3xl mx-auto leading-relaxed">
        Strategic coverage across the Gulf region and beyond. We combine international standards with localized market intelligence to deliver unfair advantages.
      </p>
    </div>
  </section>
  
  <!-- UAE -->
  <section class="py-24 bg-[var(--bg-secondary)]">
    <div class="max-w-7xl mx-auto px-6">
      <div class="mb-16">
        <h2 class="text-4xl md:text-6xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-4">
          United Arab <span class="text-red-600">Emirates</span>
        </h2>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {uaeCities.map((city) => (
          <div class="bg-[var(--bg-card)] p-10 rounded-[2.5rem] border-2 border-[var(--border-subtle)] hover:border-[var(--accent-red)] transition-all group overflow-hidden relative">
            <div class="absolute -top-4 -right-4 w-24 h-24 bg-[var(--accent-red)]/5 rounded-full blur-2xl"></div>
            <h3 class="text-3xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-6 group-hover:text-[var(--accent-red)] transition-colors">
              {city.name}
            </h3>
            
            <div class="space-y-3 mb-8">
              {['ai-seo', 'crm-systems', 'website-development', 'digital-platforms'].map(sSlug => {
                const service = services.find(s => s.slug === sSlug);
                return (
                  <a href={`/${city.slug}/${sSlug}`} class="block text-sm font-bold uppercase tracking-tight text-[var(--text-secondary)] hover:text-[var(--accent-red)] transition-colors flex items-center gap-2">
                    <span class="w-1 h-1 rounded-full bg-[var(--accent-yellow)]"></span>
                    {service?.name || sSlug.replace('-', ' ')}
                  </a>
                );
              })}
            </div>

            <a href={`/${city.slug}/website-development`} class="inline-flex items-center gap-2 text-[var(--accent-red)] font-black uppercase tracking-widest text-[10px] group-hover:gap-4 transition-all">
              Hub Performance &rarr;
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- KSA -->
  <section class="py-24 bg-[var(--bg-primary)]">
    <div class="max-w-7xl mx-auto px-6">
      <div class="mb-16">
        <h2 class="text-4xl md:text-6xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-4">
          Kingdom of <span class="text-red-600">Saudi Arabia</span>
        </h2>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {ksaCities.map((city) => (
          <div class="bg-[var(--bg-card)] p-10 rounded-[2.5rem] border-2 border-[var(--border-subtle)] hover:border-[var(--accent-red)] transition-all group overflow-hidden relative">
             <div class="absolute -top-4 -right-4 w-24 h-24 bg-[var(--accent-red)]/5 rounded-full blur-2xl"></div>
             <h3 class="text-3xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-6 group-hover:text-[var(--accent-red)] transition-colors">
              {city.name}
            </h3>

            <div class="space-y-3 mb-8">
              {['ai-seo', 'crm-systems', 'website-development', 'digital-platforms'].map(sSlug => {
                const service = services.find(s => s.slug === sSlug);
                return (
                  <a href={`/${city.slug}/${sSlug}`} class="block text-sm font-bold uppercase tracking-tight text-[var(--text-secondary)] hover:text-[var(--accent-red)] transition-colors flex items-center gap-2">
                    <span class="w-1 h-1 rounded-full bg-[var(--accent-yellow)]"></span>
                    {service?.name || sSlug.replace('-', ' ')}
                  </a>
                );
              })}
            </div>

            <a href={`/${city.slug}/website-development`} class="inline-flex items-center gap-2 text-[var(--accent-red)] font-black uppercase tracking-widest text-[10px] group-hover:gap-4 transition-all">
              Hub Performance &rarr;
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Final CTA -->
  <section class="py-32 bg-[#0a0a0a] text-white text-center">
    <div class="max-w-4xl mx-auto px-6">
      <h2 class="text-4xl md:text-7xl font-black italic uppercase tracking-tighter mb-8 leading-tight">
        Ready to <span class="text-[var(--accent-red)]">Grow</span> Your<br/> Region<span class="text-[var(--accent-yellow)]">?</span>
      </h2>
      <a href="/contact" class="inline-block px-12 py-6 bg-[var(--accent-red)] text-white font-black italic uppercase tracking-tighter text-2xl rounded-xl hover:bg-white hover:text-black transition-all shadow-2xl">
        Get Free Audit
      </a>
    </div>
  </section>
</Layout>
