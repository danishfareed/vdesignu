---
import Layout from "../layouts/Layout.astro";
import { cities } from "../config/site-config";

const uaeCities = cities.filter(c => c.country === 'UAE');
const ksaCities = cities.filter(c => c.country === 'KSA');
const otherCities = cities.filter(c => !['UAE', 'KSA'].includes(c.country));
---

<Layout title="Our Global & Regional Presence | vdesignu" description="Serving enterprises across the Gulf region - Dubai, Abu Dhabi, Riyadh, Jeddah, Doha, and more. Your regional digital growth partner.">
  <!-- Hero -->
  <section class="pt-40 pb-16 bg-[var(--bg-primary)]">
    <div class="max-w-6xl mx-auto px-6 text-center">
      <h1 class="text-5xl md:text-8xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-8 leading-none">
        Where We<br/><span class="text-red-600">Scale Brands</span>.
      </h1>
      <p class="text-2xl text-[var(--text-secondary)] max-w-3xl mx-auto leading-relaxed">
        Strategic coverage across the Gulf region and beyond. We combine international standards with localized market intelligence to deliver unfair advantages.
      </p>
    </div>
  </section>
  
  <!-- UAE -->
  <section class="py-24 bg-[var(--bg-secondary)]">
    <div class="max-w-7xl mx-auto px-6">
      <div class="mb-16">
        <h2 class="text-4xl md:text-6xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-4">
          United Arab <span class="text-red-600">Emirates</span>
        </h2>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {uaeCities.map((city) => (
          <a href={`/${city.slug}/web-development`} class="bg-[var(--bg-card)] p-10 rounded-[2.5rem] border-2 border-[var(--border-subtle)] hover:border-red-600 transition-all group overflow-hidden relative">
            <div class="absolute -top-4 -right-4 w-24 h-24 bg-red-600/5 rounded-full blur-2xl"></div>
            <h3 class="text-3xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-4 group-hover:text-red-600 transition-colors">
              {city.name}
            </h3>
            <p class="text-[var(--text-secondary)] leading-relaxed mb-6">
              Full-service digital growth solutions for enterprises in {city.name}.
            </p>
            <div class="flex items-center gap-2 text-red-600 font-bold uppercase tracking-widest text-xs">
              View Local Hub
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
  
  <!-- KSA -->
  <section class="py-24 bg-[var(--bg-primary)]">
    <div class="max-w-7xl mx-auto px-6">
      <div class="mb-16">
        <h2 class="text-4xl md:text-6xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-4">
          Kingdom of <span class="text-red-600">Saudi Arabia</span>
        </h2>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {ksaCities.map((city) => (
          <a href={`/${city.slug}/web-development`} class="bg-[var(--bg-card)] p-10 rounded-[2.5rem] border-2 border-[var(--border-subtle)] hover:border-red-600 transition-all group overflow-hidden relative">
            <h3 class="text-3xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-4 group-hover:text-red-600 transition-colors">
              {city.name}
            </h3>
            <p class="text-[var(--text-secondary)] leading-relaxed mb-6">
              Arabic-first, enterprise-grade solutions for {city.name} businesses.
            </p>
            <div class="flex items-center gap-2 text-red-600 font-bold uppercase tracking-widest text-xs">
              View Local Hub
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Final CTA -->
  <section class="py-24 bg-red-600 text-white text-center">
    <div class="max-w-4xl mx-auto px-6">
      <h2 class="text-4xl md:text-7xl font-black italic uppercase tracking-tighter mb-8 leading-tight">
        Global Standards.<br/>Local Expertise.
      </h2>
      <a href="/contact" class="inline-block px-12 py-6 bg-white text-red-600 font-black italic uppercase tracking-tighter text-2xl rounded-full hover:bg-black hover:text-white transition-all shadow-2xl">
        Book Your Region
      </a>
    </div>
  </section>
</Layout>
