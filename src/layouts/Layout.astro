---
import "../styles/global.css";
import { siteConfig, navigation } from "../config/site-config";
import ThemeToggle from "../components/ThemeToggle.astro";
import OffsetMenu from "../components/OffsetMenu.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = "Premium B2B industrial digital growth partner for visionary brands in the UAE, KSA, and beyond.",
  image = "/og-image.jpg"
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Google Analytics (GA4) -->
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${siteConfig.analytics.ga4Id}`}></script>
    <script is:inline define:vars={{ gaId: siteConfig.analytics.ga4Id }}>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', gaId);
    </script>

    <!-- Theme Detection -->
    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();
    
      if (theme === 'light') {
        document.documentElement.classList.remove('dark');
      } else {
        document.documentElement.classList.add('dark');
      }
    </script>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Outfit:wght@400;500;600;700&display=swap" rel="stylesheet" />
    
    <title>{title} | {siteConfig.name}</title>
  </head>
  <body class="bg-[var(--bg-primary)] text-[var(--text-primary)] font-sans antialiased overflow-x-hidden selection:bg-red-500/30">
    <OffsetMenu />
    
    <!-- Header -->
    <header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300 border-b border-[var(--border-subtle)] bg-[var(--bg-primary)]/80 backdrop-blur-md" id="main-header">
      <nav class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
        <a href="/" class="flex items-center gap-2 group relative z-10 transition-transform active:scale-95">
          <span class="text-3xl font-black text-red-600 tracking-tighter uppercase italic">{siteConfig.name}<span class="text-[var(--text-primary)]">.</span></span>
        </a>

        <!-- Desktop Menu -->
        <ul class="hidden lg:flex items-center gap-10">
          {navigation.header.map((item) => (
            <li class="relative group py-2">
              <a 
                href={item.href} 
                class="text-xs font-bold text-[var(--text-muted)] hover:text-red-600 transition-colors uppercase tracking-[0.2em] flex items-center gap-1"
              >
                {item.label}
                {item.dropdown && (
                  <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                )}
              </a>

              {item.dropdown && (
                <div class="absolute top-full left-1/2 -translate-x-1/2 pt-4 opacity-0 invisible translate-y-2 group-hover:opacity-100 group-hover:visible group-hover:translate-y-0 transition-all duration-300">
                  <div class="w-80 bg-[var(--bg-card)] rounded-[2rem] shadow-2xl p-6 overflow-hidden border-2 border-[var(--border-subtle)]">
                    <div class="flex flex-col gap-2">
                      {item.dropdown.map((sub: any) => (
                        <a href={sub.href} class="px-6 py-3 text-sm font-bold text-[var(--text-secondary)] rounded-xl hover:bg-neutral-100 dark:hover:bg-neutral-800 hover:text-red-600 transition-colors uppercase tracking-tight">
                          {sub.label}
                        </a>
                      ))}
                    </div>
                  </div>
                </div>
              )}
            </li>
          ))}
        </ul>

        <div class="flex items-center gap-6 relative z-10">
          <ThemeToggle />
          <a href="/contact" class="hidden md:block px-6 py-2 bg-red-600 text-white text-xs font-bold uppercase tracking-widest rounded-full hover:bg-black transition-all">
             Let's Talk
          </a>
          <button 
            id="mobile-menu-btn" 
            class="p-2 rounded-full hover:bg-[var(--bg-tertiary)] transition-colors group lg:hidden"
            aria-label="Toggle Menu"
          >
            <div class="w-6 h-5 flex flex-col justify-between">
              <span class="w-full h-0.5 bg-[var(--text-primary)] rounded-full"></span>
              <span class="w-2/3 h-0.5 bg-[var(--text-primary)] rounded-full ml-auto"></span>
              <span class="w-full h-0.5 bg-[var(--text-primary)] rounded-full"></span>
            </div>
          </button>
        </div>
      </nav>
    </header>

    <main class="min-h-screen">
      <slot />
    </main>

    <!-- Floating WhatsApp Button -->
    <a 
      href="https://wa.me/971547170855" 
      target="_blank" 
      rel="noopener noreferrer"
      class="fixed bottom-8 right-8 z-50 p-4 bg-[#25D366] text-white rounded-full shadow-2xl hover:scale-110 transition-transform duration-300 whatsapp-float flex items-center justify-center group"
      aria-label="Contact needed on WhatsApp"
    >
      <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
      </svg>
      <span class="absolute right-full mr-4 bg-black text-white px-3 py-1 rounded-lg text-sm font-bold opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap">Chat on WhatsApp</span>
    </a>

    <!-- Footer -->
    <footer class="bg-[var(--bg-secondary)] border-t border-[var(--border-subtle)]">
      <div class="max-w-7xl mx-auto px-6 py-20">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-24 mb-20">
          <div class="lg:col-span-1">
            <h2 class="text-3xl font-black text-[var(--text-primary)] mb-6 uppercase italic tracking-tighter">{siteConfig.name}</h2>
            <p class="text-sm text-[var(--text-secondary)] leading-relaxed mb-8">
              {navigation.footer.about.text}
            </p>
          </div>

          <div>
            <h4 class="text-xs font-bold uppercase tracking-[0.2em] text-[var(--text-muted)] mb-8">Capabilities</h4>
            <ul class="space-y-4">
              {navigation.footer.services.map((item) => (
                <li>
                  <a href={item.href} class="text-sm font-medium text-[var(--text-secondary)] hover:text-red-600 transition-colors">
                    {item.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <div>
            <h4 class="text-xs font-bold uppercase tracking-[0.2em] text-[var(--text-muted)] mb-8">Geographies</h4>
            <div class="space-y-6">
              {navigation.footer.locations.map((loc) => (
                <div>
                  <h5 class="text-xs font-bold text-[var(--text-primary)] mb-2">{loc.country}</h5>
                  <div class="flex flex-wrap gap-x-3 gap-y-1">
                    {loc.cities.map((city) => (
                      <span class="text-sm text-[var(--text-secondary)]">{city}</span>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </div>

          <div>
            <h4 class="text-xs font-bold uppercase tracking-[0.2em] text-[var(--text-muted)] mb-8">Portal</h4>
            <div class="p-6 rounded-3xl bg-[var(--bg-tertiary)] hover:bg-[var(--bg-primary)] border border-transparent hover:border-[var(--border-subtle)] transition-colors group">
              <p class="text-xs text-[var(--text-muted)] mb-2">Initiate Discovery</p>
              <a href="mailto:hello@vdesignu.com" class="text-lg font-bold text-[var(--text-primary)] group-hover:text-red-600 transition-colors">
                hello@vdesignu.com
              </a>
            </div>
          </div>
        </div>

        <div class="pt-10 border-t border-[var(--border-subtle)] flex flex-col md:flex-row items-center justify-between gap-6">
          <p class="text-xs text-[var(--text-muted)] tracking-wider">
            &copy; {new Date().getFullYear()} {siteConfig.name.toUpperCase()} STRATEGIC. ALL RIGHTS RESERVED.
          </p>
          <div class="flex items-center gap-6">
            <a href="/privacy" class="text-xs text-[var(--text-muted)] hover:text-[var(--text-primary)] transition-colors">PRIVACY</a>
            <a href="/terms" class="text-xs text-[var(--text-muted)] hover:text-[var(--text-primary)] transition-colors">TERMS</a>
          </div>
        </div>
      </div>
    </footer>

    <script>
      // Header scroll effect
      const header = document.getElementById('main-header');
      window.addEventListener('scroll', () => {
        if (window.scrollY > 50) {
          header?.classList.add('py-2', 'shadow-xl');
          header?.classList.remove('py-4');
        } else {
          header?.classList.remove('py-2', 'shadow-xl');
          header?.classList.add('py-4');
        }
      });
    </script>
  </body>
</html>
