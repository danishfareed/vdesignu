<section class="py-24 bg-[var(--bg-primary)]">
    <div class="max-w-7xl mx-auto px-6">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
            <!-- Image Side -->
            <div class="relative order-2 lg:order-1">
                <div
                    class="absolute inset-0 bg-gradient-to-r from-brand-red to-orange-500 rounded-2xl blur-[40px] opacity-20"
                >
                </div>
                <div
                    class="relative rounded-2xl border border-[var(--border-subtle)] overflow-hidden shadow-2xl bg-[var(--bg-secondary)] group"
                >
                    <img
                        src="/images/georanker/georanker2.png"
                        alt="GeoRanker Rank Tracking Grid"
                        class="w-full h-auto object-cover opacity-90 group-hover:opacity-100 transition-all duration-700 hover:scale-105"
                    />

                    <!-- Floating Badge -->
                    <div
                        class="absolute top-6 left-6 px-4 py-2 bg-black/80 backdrop-blur-md rounded-lg border border-[var(--accent-red)] text-white text-xs font-mono uppercase tracking-widest shadow-xl"
                    >
                        Live Scan Preview
                    </div>
                </div>
            </div>

            <!-- Content Side -->
            <div class="order-1 lg:order-2">
                <h2
                    class="text-3xl md:text-5xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-8"
                >
                    Visualize Your <br />
                    <span class="text-[var(--accent-red)]">Dominance</span>
                </h2>

                <div class="space-y-8">
                    <div class="flex gap-4">
                        <div
                            class="w-12 h-12 rounded-full bg-[var(--bg-secondary)] border border-[var(--border-subtle)] flex items-center justify-center shrink-0 text-[var(--accent-red)]"
                        >
                            <span class="font-black text-xl">1</span>
                        </div>
                        <div>
                            <h3
                                class="text-xl font-bold text-[var(--text-primary)] mb-2"
                            >
                                Detailed Heatmaps
                            </h3>
                            <p class="text-[var(--text-secondary)]">
                                Instantly spot where you rank #1 and where
                                you're invisible. Color-coded grids make it easy
                                to identify weak zones.
                            </p>
                        </div>
                    </div>

                    <div class="flex gap-4">
                        <div
                            class="w-12 h-12 rounded-full bg-[var(--bg-secondary)] border border-[var(--border-subtle)] flex items-center justify-center shrink-0 text-[var(--accent-red)]"
                        >
                            <span class="font-black text-xl">2</span>
                        </div>
                        <div>
                            <h3
                                class="text-xl font-bold text-[var(--text-primary)] mb-2"
                            >
                                Competitor Benchmarking
                            </h3>
                            <p class="text-[var(--text-secondary)]">
                                See exactly how you stack up against the
                                competition in every specific neighborhood.
                                Their weaknesses are your opportunities.
                            </p>
                        </div>
                    </div>

                    <div class="flex gap-4">
                        <div
                            class="w-12 h-12 rounded-full bg-[var(--bg-secondary)] border border-[var(--border-subtle)] flex items-center justify-center shrink-0 text-[var(--accent-red)]"
                        >
                            <span class="font-black text-xl">3</span>
                        </div>
                        <div>
                            <h3
                                class="text-xl font-bold text-[var(--text-primary)] mb-2"
                            >
                                Shareable Reports
                            </h3>
                            <p class="text-[var(--text-secondary)]">
                                Generate professional, white-label ready
                                visualizations to prove value to your clients or
                                stakeholders.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
