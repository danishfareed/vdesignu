---
interface Props {
    industry?: string;
    service?: string;
    city?: string;
    title?: string;
}

const {
    industry = "",
    service = "",
    city = "",
    title = "Start Your Strategic Transformation",
} = Astro.props;

const placeholder = industry
    ? `How can we help your ${industry} firm?`
    : "How can we help you?";
---

<section
    class="py-24 bg-[var(--bg-primary)] border-t border-[var(--border-subtle)] relative overflow-hidden"
    id="convert"
>
    <div
        class="absolute inset-0 bg-gradient-to-br from-[var(--accent-red)]/5 to-transparent"
    >
    </div>

    <div class="max-w-4xl mx-auto px-6 relative z-10">
        <div class="text-center mb-16">
            <h2
                class="text-4xl md:text-7xl font-black italic uppercase tracking-tighter mb-6 leading-tight"
            >
                {title}
            </h2>
            <p class="text-xl text-[var(--text-secondary)] font-medium italic">
                Briefing for {city} | Engineered for {industry}
            </p>
        </div>

        <form class="space-y-6">
            <div class="grid md:grid-cols-2 gap-6">
                <div class="space-y-2">
                    <label
                        class="text-[10px] font-black uppercase tracking-widest text-[var(--text-muted)] ml-4"
                        >Full Name</label
                    >
                    <input
                        type="text"
                        placeholder="John Doe"
                        class="w-full px-8 py-5 bg-[var(--bg-secondary)] border border-[var(--border-subtle)] rounded-2xl focus:border-[var(--accent-red)] outline-none transition-all font-bold"
                    />
                </div>
                <div class="space-y-2">
                    <label
                        class="text-[10px] font-black uppercase tracking-widest text-[var(--text-muted)] ml-4"
                        >Business Email</label
                    >
                    <input
                        type="email"
                        placeholder="john@company.com"
                        class="w-full px-8 py-5 bg-[var(--bg-secondary)] border border-[var(--border-subtle)] rounded-2xl focus:border-[var(--accent-red)] outline-none transition-all font-bold"
                    />
                </div>
            </div>

            <div class="space-y-2">
                <label
                    class="text-[10px] font-black uppercase tracking-widest text-[var(--text-muted)] ml-4"
                    >Project Context</label
                >
                <textarea
                    rows="4"
                    placeholder={placeholder}
                    class="w-full px-8 py-5 bg-[var(--bg-secondary)] border border-[var(--border-subtle)] rounded-2xl focus:border-[var(--accent-red)] outline-none transition-all font-bold resize-none"
                ></textarea>
            </div>

            <!-- Hidden Metadata Fields -->
            <input type="hidden" name="industry" value={industry} />
            <input type="hidden" name="service" value={service} />
            <input type="hidden" name="city" value={city} />

            <button
                type="submit"
                class="w-full py-6 bg-[var(--accent-red)] text-white font-black italic uppercase tracking-widest text-2xl rounded-2xl hover:bg-black transition-all shadow-xl hover:shadow-red-600/20 active:scale-[0.98]"
            >
                Submit Brief &xrarr;
            </button>

            <p
                class="text-center text-[10px] font-black uppercase tracking-[0.3em] text-[var(--text-muted)] mt-8"
            >
                Guaranteed Response Within 4 Hours (GCC/KSA Business Time)
            </p>
        </form>
    </div>
</section>
