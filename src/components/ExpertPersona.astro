---
interface Props {
    industry?: string;
    city?: string;
    type?: "architect" | "strategist" | "engineer";
}

const {
    industry = "Digital",
    city = "Global",
    type = "architect",
} = Astro.props;

const personae = {
    architect: {
        name: "Danish Fareed",
        role: "Senior SEO Architect",
        bio: `Strategy lead for ${industry} growth in ${city}. Specializing in multi-market programmatic systems and technical SEO hardening.`,
        stats: ["12+ Years Exp.", "500M+ Revenue Driven"],
    },
    strategist: {
        name: "Sarah Al-Rashed",
        role: "Growth Strategist (GCC)",
        bio: `Expert in ${city} market dynamics and ${industry} consumer behavior. Engineering hyper-local conversion funnels for the Gulf region.`,
        stats: ["Top 1% GCC Strategist", "Vision 2030 Consultant"],
    },
};

const persona =
    type === "strategist" ? personae.strategist : personae.architect;
---

<div
    class="mt-24 p-12 bg-[var(--bg-secondary)] rounded-[4rem] border border-[var(--border-subtle)] relative overflow-hidden group"
>
    <div
        class="absolute inset-x-0 bottom-0 h-1 bg-gradient-to-r from-[var(--accent-red)] via-[var(--accent-yellow)] to-transparent opacity-30 group-hover:opacity-100 transition-opacity"
    >
    </div>

    <div class="flex flex-col md:flex-row gap-12 items-center relative z-10">
        <!-- Visual/Avatar Placeholder with Hashing Style -->
        <div
            class="w-32 h-32 rounded-full bg-gradient-to-br from-[var(--text-primary)] to-[var(--text-muted)] p-1 flex-shrink-0"
        >
            <div
                class="w-full h-full rounded-full bg-[var(--bg-primary)] flex items-center justify-center overflow-hidden"
            >
                <span class="text-4xl font-black italic opacity-20"
                    >{
                        persona.name
                            .split(" ")
                            .map((n) => n[0])
                            .join("")
                    }</span
                >
            </div>
        </div>

        <div class="flex-1 text-center md:text-left">
            <div class="flex flex-col md:flex-row md:items-center gap-4 mb-4">
                <h3
                    class="text-3xl font-black italic uppercase tracking-tighter"
                >
                    {persona.name}
                </h3>
                <span
                    class="inline-block px-4 py-1 bg-[var(--accent-red)] text-white text-[10px] font-black uppercase tracking-[0.2em] rounded-full self-center md:self-auto"
                >
                    {persona.role}
                </span>
            </div>

            <p
                class="text-[var(--text-secondary)] text-lg leading-relaxed italic max-w-2xl mb-8"
            >
                "{persona.bio}"
            </p>

            <div class="flex flex-wrap justify-center md:justify-start gap-8">
                {
                    persona.stats.map((stat) => (
                        <div class="flex items-center gap-3">
                            <span class="w-2 h-2 rounded-full bg-[var(--accent-yellow)]" />
                            <span class="text-xs font-black uppercase tracking-widest text-[var(--text-muted)]">
                                {stat}
                            </span>
                        </div>
                    ))
                }
            </div>
        </div>

        <div
            class="hidden lg:block border-l border-[var(--border-subtle)] pl-12"
        >
            <p
                class="text-[10px] font-black uppercase tracking-[0.4em] text-[var(--text-muted)] mb-4"
            >
                Expertise Verified
            </p>
            <div class="flex gap-4">
                <!-- Stylized checkmarks/badges -->
                <div
                    class="w-10 h-10 rounded-xl bg-[var(--bg-primary)] border border-[var(--border-subtle)] flex items-center justify-center text-[var(--accent-red)] font-bold"
                >
                    ✓
                </div>
                <div
                    class="w-10 h-10 rounded-xl bg-[var(--bg-primary)] border border-[var(--border-subtle)] flex items-center justify-center text-[var(--accent-yellow)] font-bold"
                >
                    ★
                </div>
            </div>
        </div>
    </div>
</div>
