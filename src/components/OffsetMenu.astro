---
import { services, industries, cities } from "../config/site-config";
---

<div
  id="offset-menu"
  class="fixed inset-0 z-[100] translate-x-full transition-transform duration-700 ease-[cubic-bezier(0.77,0,0.175,1)] flex"
>
  <!-- Backdrop -->
  <div id="menu-backdrop" class="flex-grow bg-black/60 backdrop-blur-xl opacity-0 transition-opacity duration-700"></div>
  
  <!-- Content Panel -->
  <div class="w-full max-w-2xl bg-[var(--bg-primary)] h-full shadow-2xl overflow-y-auto px-12 md:px-20 py-24 flex flex-col border-l border-[var(--border-subtle)] relative">
    <!-- Decorative Brand Blobs (Creative Animation) -->
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none opacity-20 dark:opacity-40">
      <div class="absolute -top-20 -right-20 w-80 h-80 bg-[var(--accent-red)] rounded-full blur-[100px] animate-pulse"></div>
      <div class="absolute top-1/2 -left-20 w-64 h-64 bg-[var(--accent-yellow)] rounded-full blur-[80px] animate-bounce" style="animation-duration: 10s;"></div>
    </div>

    <!-- Close Button - Floating & Creative -->
    <div class="sticky top-0 z-50 flex justify-end -mt-16 mb-12 py-6 pointer-events-none">
      <button
        id="close-menu"
        class="pointer-events-auto p-5 rounded-2xl bg-[var(--bg-secondary)] border-2 border-[var(--border-subtle)] hover:border-[var(--accent-red)] hover:bg-[var(--accent-red)] hover:text-white transition-all duration-500 group active:scale-90 shadow-xl relative overflow-hidden"
        aria-label="Close Menu"
      >
        <div class="absolute inset-0 bg-gradient-to-tr from-[var(--accent-red)] to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
        <svg class="w-8 h-8 relative z-10 transform group-hover:rotate-180 transition-transform duration-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <div class="flex flex-col gap-20">
      <!-- Section: Services -->
      <div>
        <h4 class="text-[10px] font-black uppercase tracking-[0.4em] text-[var(--accent-red)] mb-10">Our Expertise</h4>
        <div class="grid grid-cols-1 gap-6">
          {services.map(service => (
            <a href={`/services/${service.slug}`} class="text-3xl md:text-5xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] hover:text-[var(--accent-red)] transition-all hover:translate-x-4">
              {service.name.split('(')[0]}
            </a>
          ))}
        </div>
      </div>

      <!-- Section: Company Links -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        <a href="/about" class="text-xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] hover:text-[var(--accent-red)] transition-colors">About</a>
        <a href="/contact" class="text-xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] hover:text-[var(--accent-red)] transition-colors">Contact</a>
        <a href="/faq" class="text-xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] hover:text-[var(--accent-red)] transition-colors">FAQ</a>
        <a href="/blog" class="text-xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] hover:text-[var(--accent-red)] transition-colors">Blog</a>
      </div>

      <!-- Section: Regions & Industries -->
      <div class="grid md:grid-cols-2 gap-16">
        <div>
          <h4 class="text-[10px] font-black uppercase tracking-[0.4em] text-[var(--text-muted)] mb-8">Locations</h4>
          <div class="flex flex-col gap-4">
            <a href="/locations" class="text-xl font-bold uppercase tracking-tight text-[var(--text-secondary)] hover:text-[var(--accent-red)] transition-colors">All Cities</a>
            {cities.slice(0, 5).map(city => (
              <a href={`/${city.slug}/website-development`} class="text-sm font-medium text-[var(--text-muted)] hover:text-[var(--text-primary)] transition-colors italic">
                {city.name}, {city.country}
              </a>
            ))}
          </div>
        </div>

        <div>
          <h4 class="text-[10px] font-black uppercase tracking-[0.4em] text-[var(--text-muted)] mb-8">Industries</h4>
          <div class="flex flex-col gap-4">
             <a href="/industries" class="text-xl font-bold uppercase tracking-tight text-[var(--text-secondary)] hover:text-[var(--accent-red)] transition-colors">All Sectors</a>
             {industries.slice(0, 5).map(ind => (
               <a href={`/dubai/${ind.slug}/website-development`} class="text-sm font-medium text-[var(--text-muted)] hover:text-[var(--text-primary)] transition-colors italic">
                 {ind.name}
               </a>
             ))}
          </div>
        </div>
      </div>

      <!-- Footer-like menu bottom -->
      <div class="pt-12 border-t border-[var(--border-subtle)] mt-10">
         <p class="text-[10px] font-black uppercase tracking-[0.3em] text-[var(--text-muted)] mb-6">Need expert help?</p>
         <a href="mailto:hello@vdesignu.com" class="text-2xl md:text-4xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] hover:text-[var(--accent-red)] transition-colors">
           hello@vdesignu.com
         </a>
      </div>
    </div>
  </div>
</div>

<script>
  const offsetMenu = document.getElementById('offset-menu');
  const menuBackdrop = document.getElementById('menu-backdrop');
  const openButtons = document.querySelectorAll('[data-menu-open]');
  const closeButton = document.getElementById('close-menu');

  const openMenu = () => {
    offsetMenu?.classList.remove('translate-x-full');
    menuBackdrop?.classList.add('opacity-100');
    document.body.style.overflow = 'hidden';
  };

  const closeMenu = () => {
    offsetMenu?.classList.add('translate-x-full');
    menuBackdrop?.classList.remove('opacity-100');
    document.body.style.overflow = '';
  };

  openButtons.forEach(btn => btn.addEventListener('click', openMenu));
  closeButton?.addEventListener('click', closeMenu);
  menuBackdrop?.addEventListener('click', closeMenu);

  // Esc key closure
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeMenu();
  });
</script>
