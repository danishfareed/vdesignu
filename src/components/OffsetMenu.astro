---
import { services, industries, cities } from "../config/site-config";
---

<div
  id="offset-menu"
  class="fixed inset-0 z-[100] translate-x-full transition-transform duration-700 ease-[cubic-bezier(0.77,0,0.175,1)] flex"
>
  <!-- Backdrop -->
  <div id="menu-backdrop" class="flex-grow bg-black/40 backdrop-blur-sm opacity-0 transition-opacity duration-700"></div>
  
  <!-- Content Panel -->
  <div class="w-full max-w-2xl bg-[var(--bg-primary)] h-full shadow-2xl overflow-y-auto px-12 md:px-20 py-24 flex flex-col border-l border-[var(--border-subtle)] relative">
    <!-- Close Button -->
    <button
      id="close-menu"
      class="absolute top-10 right-10 p-4 rounded-full hover:bg-[var(--accent-red)] hover:text-white transition-all group active:scale-95"
      aria-label="Close Menu"
    >
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <div class="flex flex-col gap-20">
      <!-- Section: Services -->
      <div>
        <h4 class="text-[10px] font-black uppercase tracking-[0.4em] text-[var(--accent-red)] mb-10">Our Expertise</h4>
        <div class="flex flex-col gap-6">
          {services.map(service => (
            <a href={`/services/${service.slug}`} class="text-3xl md:text-5xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] hover:text-[var(--accent-red)] transition-all hover:translate-x-4">
              {service.name.split('(')[0]}
            </a>
          ))}
        </div>
      </div>

      <!-- Section: Regions & Industries -->
      <div class="grid md:grid-cols-2 gap-16">
        <div>
          <h4 class="text-[10px] font-black uppercase tracking-[0.4em] text-[var(--text-muted)] mb-8">Locations</h4>
          <div class="flex flex-col gap-4">
            <a href="/locations" class="text-xl font-bold uppercase tracking-tight text-[var(--text-secondary)] hover:text-[var(--accent-red)] transition-colors">All Cities</a>
            {cities.slice(0, 5).map(city => (
              <a href={`/${city.slug}/website-development`} class="text-sm font-medium text-[var(--text-muted)] hover:text-[var(--text-primary)] transition-colors italic">
                {city.name}, {city.country}
              </a>
            ))}
          </div>
        </div>

        <div>
          <h4 class="text-[10px] font-black uppercase tracking-[0.4em] text-[var(--text-muted)] mb-8">Industries</h4>
          <div class="flex flex-col gap-4">
             <a href="/industries" class="text-xl font-bold uppercase tracking-tight text-[var(--text-secondary)] hover:text-[var(--accent-red)] transition-colors">All Sectors</a>
             {industries.slice(0, 5).map(ind => (
               <a href={`/dubai/${ind.slug}/website-development`} class="text-sm font-medium text-[var(--text-muted)] hover:text-[var(--text-primary)] transition-colors italic">
                 {ind.name}
               </a>
             ))}
          </div>
        </div>
      </div>

      <!-- Footer-like menu bottom -->
      <div class="pt-12 border-t border-[var(--border-subtle)] mt-10">
         <p class="text-[10px] font-black uppercase tracking-[0.3em] text-[var(--text-muted)] mb-6">Need expert help?</p>
         <a href="mailto:hello@vdesignu.com" class="text-2xl md:text-4xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] hover:text-[var(--accent-red)] transition-colors">
           hello@vdesignu.com
         </a>
      </div>
    </div>
  </div>
</div>

<script>
  const offsetMenu = document.getElementById('offset-menu');
  const menuOverlay = document.getElementById('menu-overlay');
  const openButtons = document.querySelectorAll('[data-menu-open]');
  const closeButton = document.getElementById('close-menu');

  const openMenu = () => {
    offsetMenu?.classList.remove('translate-x-full');
    menuOverlay?.classList.add('opacity-100');
    document.body.style.overflow = 'hidden';
  };

  const closeMenu = () => {
    offsetMenu?.classList.add('translate-x-full');
    menuOverlay?.classList.remove('opacity-100');
    document.body.style.overflow = '';
  };

  openButtons.forEach(btn => btn.addEventListener('click', openMenu));
  closeButton?.addEventListener('click', closeMenu);
  menuOverlay?.addEventListener('click', closeMenu);

  // Esc key closure
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeMenu();
  });
</script>
