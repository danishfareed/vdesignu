---
import content from "../../data/site-content.json";
const { results } = content.homepage;
---

<section class="py-24 bg-[var(--bg-secondary)] relative overflow-hidden">
  <!-- Decor -->
  <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-red-600/5 rounded-full blur-[120px] -translate-y-1/2 translate-x-1/2"></div>
  
  <div class="max-w-7xl mx-auto px-6">
    <!-- Section Header -->
    <div class="mb-20">
      <h2 class="text-xs font-black uppercase tracking-[0.4em] text-red-600 mb-6">Our Results</h2>
      <h3 class="text-4xl md:text-7xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] leading-[0.9] mb-8">
        Proven <span class="text-[var(--accent-red)]">Growth</span> Results<span class="text-[var(--accent-yellow)]">.</span>
      </h3>
      <p class="text-xl text-[var(--text-secondary)] max-w-2xl font-medium">
        {results.subtitle}
      </p>
    </div>

    <!-- Case Study Cards -->
    <div class="grid md:grid-cols-3 gap-8">
      {results.cases.map((case_study: any) => (
        <div class="bg-[var(--bg-card)] border-2 border-[var(--border-subtle)] rounded-[3rem] p-10 hover:border-[var(--accent-red)] transition-all duration-500 group relative overflow-hidden">
          <div class="absolute -top-10 -right-10 w-32 h-32 bg-[var(--accent-red)]/5 rounded-full blur-2xl group-hover:bg-[var(--accent-red)]/10 transition-colors"></div>
          
          <!-- Industry Tag -->
          <div class="flex items-center justify-between mb-8 pb-6 border-b border-[var(--border-subtle)]/50">
            <span class="px-4 py-1 rounded-full bg-red-50 dark:bg-red-900/10 text-red-600 dark:text-red-400 text-[10px] font-black uppercase tracking-[0.2em] border border-red-100 dark:border-red-900/30">
              {case_study.industry}
            </span>
            <span class="text-[10px] font-bold text-[var(--text-muted)] uppercase tracking-widest flex items-center gap-1">
               <svg class="w-3 h-3 text-[var(--accent-yellow)]" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
               </svg>
               {case_study.location}
            </span>
          </div>

          <!-- Main Metric -->
          <div class="mb-8">
            <div class="text-7xl font-black italic tracking-tighter text-[var(--text-primary)] mb-2 group-hover:text-[var(--accent-red)] transition-colors">
              {case_study.metric}<span class="text-[var(--accent-yellow)]">+</span>
            </div>
            <div class="text-xs font-black text-[var(--text-primary)] uppercase tracking-[0.3em]">
              {case_study.label}
            </div>
          </div>

          <!-- Description -->
          <p class="text-[var(--text-secondary)] font-medium leading-relaxed mb-8">
            {case_study.description}
          </p>

          <!-- Timeline -->
          <div class="flex items-center gap-3 text-[10px] font-black text-red-600 dark:text-red-500 uppercase tracking-widest pt-6 border-t border-[var(--border-subtle)]/50">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span>Results in {case_study.timeline}</span>
          </div>
        </div>
      ))}
    </div>

    <!-- CTA -->
    <div class="text-center mt-20">
      <a href="/work" class="inline-flex items-center gap-4 px-10 py-5 bg-[var(--text-primary)] text-[var(--bg-primary)] font-black italic rounded-xl hover:bg-[var(--accent-red)] hover:text-white transition-all uppercase tracking-tighter text-xl active:scale-95 shadow-xl">
        See All Case Studies
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
  </div>
</section>
