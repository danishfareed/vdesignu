---
import content from "../../data/site-content.json";
const { hero, stats } = content.homepage;
---

<section class="relative min-h-[95vh] flex items-center justify-center pt-32 pb-24 overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-[var(--bg-primary)]">
    <div class="absolute inset-0 grid-pattern opacity-5 dark:opacity-10"></div>
    <div class="absolute top-1/3 left-1/2 -translate-x-1/2 w-[800px] h-[800px] bg-red-500/10 dark:bg-red-500/20 rounded-full blur-[120px] mix-blend-multiply dark:mix-blend-overlay"></div>
    <div class="absolute bottom-1/4 right-1/4 w-[400px] h-[400px] bg-yellow-400/5 dark:bg-yellow-400/10 rounded-full blur-[100px]"></div>
  </div>
  
  <div class="relative z-10 max-w-6xl mx-auto px-6 text-center">
    <!-- Trust Badge -->
    <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-red-50 dark:bg-red-900/20 border border-red-100 dark:border-red-900/50 mb-10 group cursor-default">
      <svg class="w-4 h-4 text-red-600 animate-pulse" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
      </svg>
      <span class="text-xs font-bold text-red-700 dark:text-red-400 uppercase tracking-[0.3em]">
        {hero.badge}
      </span>
    </div>
    
    <!-- Main Headline -->
    <h1 class="text-6xl md:text-8xl lg:text-9xl font-black italic uppercase tracking-tighter leading-[0.9] text-[var(--text-primary)] mb-10 translate-y-[-5%]">
      Engineering<br/>
      <span class="text-[var(--accent-red)] drop-shadow-[0_10px_30px_rgba(220,38,38,0.2)]">Revenue</span><br/>
      <span class="relative inline-block">
        Systems<span class="text-[var(--accent-yellow)]">.</span>
        <div class="absolute -bottom-2 left-0 w-full h-2 bg-[var(--accent-yellow)]/30 rounded-full blur-sm"></div>
      </span>
    </h1>
    
    <!-- Subheadline -->
    <p class="text-xl md:text-2xl font-medium text-[var(--text-secondary)] max-w-4xl mx-auto mb-16 leading-relaxed">
      {hero.subheadline}
    </p>
    
    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-8 mb-24">
      {hero.cta.map((btn: any) => (
        <a 
          href={btn.href}
          class={btn.primary 
            ? "group px-12 py-6 bg-[var(--accent-red)] text-white font-black italic rounded-xl hover:bg-black transition-all duration-300 shadow-2xl shadow-red-600/30 flex items-center gap-4 uppercase tracking-tighter text-2xl group scale-105 hover:scale-110 active:scale-95"
            : "px-12 py-6 bg-transparent border-2 border-[var(--border-subtle)] text-[var(--text-primary)] font-bold rounded-xl hover:border-[var(--accent-yellow)] hover:text-[var(--accent-yellow)] transition-all duration-300 flex items-center gap-3 uppercase tracking-tight text-xl backdrop-blur-sm"
          }
        >
          {btn.label}
          {btn.primary && (
            <svg class="w-6 h-6 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="4" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          )}
        </a>
      ))}
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-3 gap-8 max-w-5xl mx-auto border-t border-[var(--border-subtle)] pt-16 relative">
      <div class="absolute -top-px left-1/4 w-1/2 h-px bg-gradient-to-r from-transparent via-[var(--accent-yellow)] to-transparent"></div>
      {stats.map((stat: any) => (
        <div class="text-center group">
          <div class="text-5xl md:text-7xl font-black italic tracking-tighter text-[var(--text-primary)] mb-2 group-hover:text-[var(--accent-red)] transition-colors">
            {stat.value}<span class="text-[var(--accent-yellow)]">{stat.suffix}</span>
          </div>
          <div class="text-xs md:text-sm font-black text-[var(--text-primary)] uppercase tracking-[0.2em] mb-1">{stat.label}</div>
          <div class="text-[10px] text-[var(--text-muted)] font-bold uppercase tracking-widest">{stat.description}</div>
        </div>
      ))}
    </div>
  </div>
</section>
