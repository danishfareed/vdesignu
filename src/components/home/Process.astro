---
import content from "../../data/site-content.json";
const { title, subtitle, items } = content.homepage.services; // Reusing service items for process logic or default
---

<section class="py-24 bg-[var(--bg-primary)] overflow-hidden border-t border-[var(--border-subtle)]">
  <div class="max-w-7xl mx-auto px-6">
    <div class="mb-20">
      <h2 class="text-xs font-black uppercase tracking-[0.4em] text-red-600 mb-6">Our Blueprint</h2>
      <h3 class="text-3xl sm:text-4xl md:text-7xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] leading-[0.9] mb-8">
        Precision <span class="text-[var(--accent-red)]">Engineered</span> Execution
      </h3>
    </div>

    <div class="grid lg:grid-cols-4 gap-8">
      {[
        { step: "01", title: "Business Audit", desc: "We look at your website, your tools, and where you are losing customers." },
        { step: "02", title: "Growth Design", desc: "We build a plan to grow your B2B or B2C brand with smart digital tools." },
        { step: "03", title: "Fast Development", desc: "We build your system quickly with constant updates and testing." },
        { step: "04", title: "Launch & Scale", desc: "We go live and help you find new customers with AI SEO and automation." }
      ].map((item: any, i: number) => (
        <div class="group relative">
           <div class="text-6xl md:text-8xl font-black italic tracking-tighter text-[var(--accent-red)] opacity-10 mb-6 group-hover:text-[var(--accent-yellow)] group-hover:opacity-30 transition-all">
             {item.step}
           </div>
           
           <h4 class="text-2xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-4">
             {item.title}
           </h4>
           
           <p class="text-[var(--text-secondary)] font-medium leading-relaxed mb-8">
             {item.desc}
           </p>

           {i < 3 && (
             <div class="hidden lg:block absolute top-[20%] -right-4 w-8 h-px bg-gradient-to-r from-[var(--border-subtle)] to-transparent"></div>
           )}
        </div>
      ))}
    </div>

    <div class="mt-20 pt-12 border-t border-[var(--border-subtle)] flex flex-col md:flex-row items-center justify-between gap-8">
       <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-full bg-[var(--accent-yellow)]/20 flex items-center justify-center text-[var(--accent-yellow)]">
             <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
               <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
             </svg>
          </div>
          <p class="text-sm font-bold text-[var(--text-secondary)] uppercase tracking-widest">Enterprise Delivery in 4-8 Weeks</p>
       </div>
       <a href="/contact" class="px-10 py-5 bg-[var(--text-primary)] text-[var(--bg-primary)] font-black italic rounded-xl hover:bg-[var(--accent-red)] hover:text-white transition-all uppercase tracking-tighter text-xl active:scale-95 shadow-xl">
          Start Your Audit
       </a>
    </div>
  </div>
</section>
