---
import content from "../../data/site-content.json";
const { cta } = content.homepage;
---

<section class="py-24 bg-[var(--bg-primary)]">
  <div class="max-w-7xl mx-auto px-6">
    <div class="bg-[var(--accent-red)] rounded-[3rem] p-12 md:p-24 relative overflow-hidden shadow-2xl">
      <!-- Decor -->
      <div class="absolute top-0 right-0 w-96 h-96 bg-white/10 rounded-full blur-[100px] -translate-y-1/2 translate-x-1/2"></div>
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-[var(--accent-yellow)]/20 rounded-full blur-[100px] translate-y-1/2 -translate-x-1/2"></div>

      <div class="relative z-10 grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <h2 class="text-4xl md:text-7xl font-black italic uppercase tracking-tighter text-white mb-8 leading-[0.95]">
            Stop Losing <span class="text-[var(--accent-yellow)] drop-shadow-lg">Deals</span> to Generic Sites.
          </h2>
          <p class="text-xl text-white opacity-90 mb-10 leading-relaxed max-w-xl font-medium">
            {cta.subtitle}
          </p>
          
          <div class="flex flex-wrap gap-6 items-center">
            <a href="/contact" class="px-10 py-5 bg-[var(--accent-yellow)] text-black font-black italic rounded-full hover:bg-white transition-all shadow-xl uppercase tracking-tighter text-2xl active:scale-95">
              {cta.button}
            </a>
            <div class="text-white opacity-70 text-sm font-bold uppercase tracking-widest whitespace-nowrap">
              {cta.note}
            </div>
          </div>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div class="p-6 rounded-2xl bg-white/10 backdrop-blur-sm border border-white/10 group hover:border-[var(--accent-yellow)]/50 transition-colors">
            <div class="text-[var(--accent-yellow)] font-black italic text-3xl mb-1 group-hover:scale-105 transition-transform origin-left">FREE</div>
            <div class="text-white font-bold uppercase tracking-tight text-sm opacity-80">Growth Stack Audit</div>
          </div>
          <div class="p-6 rounded-2xl bg-white/10 backdrop-blur-sm border border-white/10 group hover:border-[var(--accent-yellow)]/50 transition-colors">
            <div class="text-[var(--accent-yellow)] font-black italic text-3xl mb-1 group-hover:scale-105 transition-transform origin-left">ROI</div>
            <div class="text-white font-bold uppercase tracking-tight text-sm opacity-80">Revenue Roadmap</div>
          </div>
          <div class="p-6 rounded-2xl bg-white/10 backdrop-blur-sm border border-white/10 group hover:border-[var(--accent-yellow)]/50 transition-colors">
            <div class="text-[var(--accent-yellow)] font-black italic text-3xl mb-1 group-hover:scale-105 transition-transform origin-left">24h</div>
            <div class="text-white font-bold uppercase tracking-tight text-sm opacity-80">Strategy Delivery</div>
          </div>
          <div class="p-6 rounded-2xl bg-white/10 backdrop-blur-sm border border-white/10 group hover:border-[var(--accent-yellow)]/50 transition-colors">
            <div class="text-[var(--accent-yellow)] font-black italic text-3xl mb-1 group-hover:scale-105 transition-transform origin-left">30m</div>
            <div class="text-white font-bold uppercase tracking-tight text-sm opacity-80">Direct Expert Access</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
