---
import content from "../../data/site-content.json";
const { services } = content.homepage;
---

<section class="py-24 bg-[var(--bg-secondary)] relative overflow-hidden">
  <!-- Decor -->
  <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-[var(--border-subtle)] to-transparent"></div>
  
  <div class="max-w-7xl mx-auto px-6">
    <div class="mb-20">
      <h2 class="text-xs font-black uppercase tracking-[0.4em] text-red-600 mb-6">What we do</h2>
      <h3 class="text-4xl md:text-7xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] leading-[0.9] mb-8">
        We Build Websites That <span class="text-[var(--accent-red)]">Grow</span> your business<span class="text-[var(--accent-yellow)]">.</span>
      </h3>
      <p class="text-xl text-[var(--text-secondary)] max-w-2xl font-medium">
        Expert digital engineering and AI SEO systems for B2B and B2C companies in the Gulf and around the world.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.items.map((service: any, i: number) => (
        <a 
          href={`/services/${service.slug}`} 
          class="bg-[var(--bg-card)] p-10 rounded-[3rem] border-2 border-[var(--border-subtle)] hover:border-[var(--accent-red)] transition-all duration-500 group relative overflow-hidden flex flex-col justify-between min-h-[400px]"
        >
          <!-- Accent Decor -->
          <div class="absolute -top-10 -right-10 w-32 h-32 bg-[var(--accent-red)]/5 rounded-full blur-2xl group-hover:bg-[var(--accent-red)]/10 transition-colors"></div>
          
          <div>
            <div class="w-16 h-16 rounded-2xl bg-[var(--bg-tertiary)] flex items-center justify-center mb-8 group-hover:bg-[var(--accent-red)] group-hover:text-white transition-all duration-500 group-hover:scale-110 group-hover:rotate-3">
              <span class="text-2xl font-black italic tracking-tighter">0{i+1}</span>
            </div>
            
            <h4 class="text-3xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-4 group-hover:text-[var(--accent-red)] transition-colors leading-[0.9]">
              {service.title.split(' ')[0]}<br/>
              <span class="text-[var(--text-secondary)] group-hover:text-[var(--text-primary)] transition-colors">
                {service.title.split(' ').slice(1).join(' ')}
              </span>
            </h4>
            
            <p class="text-[var(--text-secondary)] leading-relaxed font-medium mb-8">
              {service.description.replace('Industrial', 'Digital').split('.')[0]}. Built for B2B and B2C growth.
            </p>
          </div>

          <div class="flex items-center justify-between mt-auto pt-8 border-t border-[var(--border-subtle)]/50 group-hover:border-[var(--accent-red)]/30 transition-colors">
            <span class="text-[10px] font-black uppercase tracking-widest text-[var(--text-muted)] group-hover:text-[var(--accent-red)] transition-colors">Learn More</span>
            <div class="w-10 h-10 rounded-full bg-[var(--bg-tertiary)] flex items-center justify-center group-hover:bg-[var(--accent-yellow)] group-hover:text-black transition-all">
               <svg class="w-5 h-5 translate-x-[-1px]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M17 8l4 4m0 0l-4 4m4-4H3" />
               </svg>
            </div>
          </div>
        </a>
      ))}
    </div>

    <!-- Bottom Action -->
    <div class="mt-20 text-center">
       <a href="/services" class="inline-flex items-center gap-4 px-10 py-5 bg-[var(--bg-tertiary)] text-[var(--text-primary)] font-black italic rounded-xl hover:bg-[var(--accent-yellow)] hover:text-black transition-all uppercase tracking-tighter text-xl active:scale-95">
          View All Services
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M19 9l-7 7-7-7"/>
          </svg>
       </a>
    </div>
  </div>
</section>
