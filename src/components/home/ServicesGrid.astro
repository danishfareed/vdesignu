---
import content from "../../data/site-content.json";
const { services } = content.homepage;

const icons: Record<string, string> = {
  code: "M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4",
  chart: "M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z",
  target: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z",
  palette: "M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z",
  automation: "M13 10V3L4 14h7v7l9-11h-7z",
  document: "M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
};
---

<section class="py-24 bg-[var(--bg-card)]">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-6xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-4">
        {services.title}
      </h2>
      <p class="text-xl text-[var(--text-secondary)] max-w-3xl mx-auto">
        {services.subtitle}
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      {services.items.map((service: any) => (
        <a 
          href={`/services/${service.slug}`}
          class="group bg-[var(--bg-primary)] border-2 border-[var(--border-subtle)] rounded-2xl p-8 hover:border-red-500 transition-all duration-300 hover:shadow-xl"
        >
          <!-- Icon -->
          <div class="w-14 h-14 rounded-xl bg-red-50 dark:bg-red-900/20 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
            <svg class="w-7 h-7 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icons[service.icon] || icons.code}/>
            </svg>
          </div>

          <!-- Title -->
          <h3 class="text-2xl font-black text-[var(--text-primary)] mb-3 group-hover:text-red-600 transition-colors uppercase tracking-tight">
            {service.title}
          </h3>

          <!-- Description -->
          <p class="text-[var(--text-secondary)] leading-relaxed mb-4">
            {service.description}
          </p>

          <!-- Learn More Link -->
          <div class="flex items-center gap-2 text-red-600 font-bold text-sm uppercase tracking-wide group-hover:gap-3 transition-all">
            Learn More
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </div>
        </a>
      ))}
    </div>

    <!-- View All CTA -->
    <div class="text-center">
      <a href="/services" class="inline-flex items-center gap-2 px-8 py-4 bg-red-600 text-white font-bold rounded-full hover:bg-black dark:hover:bg-red-700 transition-colors uppercase tracking-tight shadow-lg">
        View All Services
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
  </div>
</section>
