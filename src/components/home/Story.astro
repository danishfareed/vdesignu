---
import content from "../../data/site-content.json";
const { title, mission, values } = content.about;
---

<section class="py-24 bg-[var(--bg-primary)] overflow-hidden">
  <div class="max-w-7xl mx-auto px-6">
    <div class="grid lg:grid-cols-2 gap-20 items-center">
      <!-- Visual Side -->
      <div class="relative order-2 lg:order-1">
        <div class="grid grid-cols-2 gap-6">
          <div class="space-y-6">
            <div class="aspect-square bg-[var(--accent-red)] rounded-[2.5rem] flex items-center justify-center p-10 text-white shadow-2xl shadow-red-600/20 rotate-[-2deg]">
              <div class="text-5xl font-black italic tracking-tighter uppercase leading-none">Why<br/><span class="text-[var(--accent-yellow)]">Us?</span></div>
            </div>
            <div class="aspect-[3/4] rounded-[2.5rem] overflow-hidden border-2 border-[var(--border-subtle)] bg-[var(--bg-secondary)] flex items-center justify-center p-8 text-center hover:border-[var(--accent-yellow)] transition-colors">
              <div>
                <div class="text-5xl font-black italic text-[var(--accent-red)] mb-2">200+</div>
                <div class="text-[10px] font-black uppercase tracking-widest text-[var(--text-muted)]">Global Partners</div>
              </div>
            </div>
          </div>
          <div class="space-y-6 pt-16">
            <div class="aspect-[3/4] rounded-[2.5rem] overflow-hidden border-2 border-[var(--border-subtle)] bg-[var(--bg-secondary)] flex items-center justify-center p-8 text-center hover:border-[var(--accent-red)] transition-colors">
              <div>
                <div class="text-5xl font-black italic text-[var(--accent-red)] mb-2">100%</div>
                <div class="text-[10px] font-black uppercase tracking-widest text-[var(--text-muted)]">B2B & B2C Growth</div>
              </div>
            </div>
            <div class="aspect-square bg-[var(--text-primary)] rounded-[2.5rem] flex items-center justify-center p-10 text-[var(--bg-primary)] rotate-[3deg] shadow-xl">
               <svg class="w-16 h-16 text-[var(--accent-yellow)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-10V4m0 10V4m0 10h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
          </div>
        </div>
        
        <!-- Decorative bits -->
        <div class="absolute -top-12 -left-12 w-64 h-64 bg-[var(--accent-red)]/5 rounded-full blur-[100px] -z-10"></div>
        <div class="absolute -bottom-12 -right-12 w-64 h-64 bg-[var(--accent-yellow)]/5 rounded-full blur-[100px] -z-10"></div>
      </div>

      <!-- Text Side -->
      <div class="order-1 lg:order-2">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-400 text-xs font-black uppercase tracking-[0.3em] mb-8 border border-red-100 dark:border-red-900/30">
          The vdesignu Strategy
        </div>
        <h2 class="text-3xl sm:text-4xl md:text-8xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-10 leading-[0.9] translate-x-[-2%]">
          Built for <span class="text-[var(--accent-red)]">High-Stakes</span> Authority
        </h2>
        
        <p class="text-lg md:text-2xl text-[var(--text-secondary)] leading-relaxed mb-12 font-medium">
          {mission}
        </p>
        
        <div class="grid gap-10">
          {values.map((value: any) => (
            <div class="flex gap-6 group">
              <div class="flex-shrink-0 w-8 h-8 rounded-full bg-[var(--accent-red)] mt-1 flex items-center justify-center group-hover:bg-[var(--accent-yellow)] group-hover:rotate-[360deg] transition-all duration-700">
                <svg class="w-5 h-5 text-white group-hover:text-black transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="4" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <div>
                <h4 class="text-2xl font-black italic uppercase tracking-tighter text-[var(--text-primary)] mb-2 group-hover:text-[var(--accent-red)] transition-colors">{value.title}</h4>
                <p class="text-[var(--text-secondary)] text-base font-medium leading-relaxed">{value.description}</p>
              </div>
            </div>
          ))}
        </div>

        <div class="mt-16 flex flex-wrap gap-6">
          <a href="/about" class="px-10 py-5 bg-[var(--text-primary)] text-[var(--bg-primary)] font-black italic rounded-xl hover:bg-[var(--accent-red)] hover:text-white transition-all uppercase tracking-tighter text-2xl active:scale-95 shadow-xl">
            Our DNA
          </a>
          <a href="/contact" class="px-10 py-5 border-2 border-[var(--border-subtle)] text-[var(--text-primary)] font-black italic rounded-xl hover:border-[var(--accent-yellow)] hover:text-[var(--accent-yellow)] transition-all uppercase tracking-tighter text-2xl active:scale-95">
            Get Started
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
