<button
  id="theme-toggle"
  class="relative p-2 rounded-full hover:bg-neutral-200 dark:hover:bg-neutral-800 transition-colors duration-300 group overflow-hidden"
  aria-label="Toggle Theme"
>
  <!-- Sun Icon -->
  <svg
    class="w-6 h-6 text-yellow-500 transition-transform duration-500 dark:translate-y-[150%] dark:opacity-0"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M12 3v1m0 16v1m9-9h-1M4 9h-1m15.364-6.364l-.707.707M6.343 17.657l-.707.707M17.657 17.657l.707.707M6.343 6.343l.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
    ></path>
  </svg>
  
  <!-- Moon Icon -->
  <svg
    class="w-6 h-6 text-blue-400 absolute top-2 left-2 transition-transform duration-500 -translate-y-[150%] opacity-0 dark:translate-y-0 dark:opacity-100"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
    ></path>
  </svg>
</button>

<script>
  const themeToggle = document.getElementById('theme-toggle');
  
  const getTheme = () => {
    if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
      return localStorage.getItem('theme');
    }
    return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
  };

  const setTheme = (theme: string) => {
    if (theme === 'dark') {
      document.documentElement.classList.add('dark');
    } else {
      document.documentElement.classList.remove('dark');
    }
    localStorage.setItem('theme', theme);
  };

  themeToggle?.addEventListener('click', () => {
    const isDark = document.documentElement.classList.contains('dark');
    setTheme(isDark ? 'light' : 'dark');
  });

  // Initial set
  setTheme(getTheme()!);
</script>
