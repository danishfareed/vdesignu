---
/**
 * CategoryCard Component
 * Displays a category preview card with tool count
 */
import type { ToolCategory } from '../../data/tools-data';
import * as LucideIcons from 'lucide-react';

interface Props {
  category: ToolCategory;
}

const { category } = Astro.props;

// Get the icon component dynamically
const IconComponent = (LucideIcons as any)[category.icon] || LucideIcons.Folder;
---

<a 
  href={`/tools/${category.slug}`}
  class="group block bg-[var(--bg-card)] border-2 border-[var(--border-subtle)] rounded-[2.5rem] p-10 hover:border-[var(--accent-red)] transition-all duration-300 hover:shadow-2xl hover:shadow-red-600/10 relative overflow-hidden"
>
  <!-- Background decoration -->
  <div class="absolute top-0 right-0 w-40 h-40 bg-[var(--accent-red)]/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 group-hover:bg-[var(--accent-red)]/10 transition-colors"></div>
  
  <div class="relative z-10">
    <!-- Icon and badge -->
    <div class="flex items-center justify-between mb-8">
      <div class="w-16 h-16 rounded-2xl bg-[var(--accent-red)] flex items-center justify-center text-white shadow-lg shadow-red-600/20 group-hover:scale-110 transition-transform">
        <IconComponent className="w-8 h-8" />
      </div>
      <div class="text-right">
        <div class="text-4xl font-black italic text-[var(--accent-red)]">{category.toolCount}</div>
        <div class="text-[10px] font-black uppercase tracking-widest text-[var(--text-muted)]">Tools</div>
      </div>
    </div>
    
    <!-- Category name -->
    <h3 class="text-2xl font-black text-[var(--text-primary)] uppercase tracking-tight mb-4 group-hover:text-[var(--accent-red)] transition-colors leading-tight">
      {category.name}
    </h3>
    
    <!-- Description -->
    <p class="text-sm text-[var(--text-secondary)] leading-relaxed mb-6 line-clamp-3">
      {category.description}
    </p>
    
    <!-- Tier badge -->
    <div class="flex items-center justify-between">
      <span class={`px-3 py-1 text-[9px] font-black uppercase tracking-wider rounded-lg ${
        category.tier === 1 
          ? 'bg-[var(--accent-red)]/10 text-[var(--accent-red)]' 
          : 'bg-[var(--accent-yellow)]/20 text-[var(--accent-yellow)]'
      }`}>
        Tier {category.tier}
      </span>
      
      <div class="flex items-center gap-2 text-[var(--accent-red)] text-xs font-black uppercase tracking-wider opacity-0 group-hover:opacity-100 transition-opacity">
        <span>Explore</span>
        <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </div>
    </div>
  </div>
</a>
